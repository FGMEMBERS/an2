    <property>/an2/systems/electrical/bus-27</property>
    <not>
      <property>/controls/flight/rudder-trim</property>
    </not>
  </condition>                        
  <emission>
    <red>0.3</red>
    <green>0.9</green>
    <blue>0.2</blue>
  </emission>
</animation>
