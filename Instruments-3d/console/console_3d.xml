<!--Handles-->
<!--Throttle-->
<animation>
  <type>rotate</type>
  <object-name>throttle_handle</object-name>
  <property>/controls/engines/engine/throttle</property>
  <factor>-100.0</factor>
  <offset-deg>45.0</offset-deg>
  <axis>
    <x>0.0</x>
    <y>1.0</y>
    <z>0.0</z>
  </axis>
</animation>
<!--Propeller pitch-->
<animation>
  <type>rotate</type>
  <object-name>prop_handle</object-name>
  <property>/an2/controls/switches/prop_handle</property>
  <!--<property>/controls/engines/engine/propeller-pitch</property>-->
  <factor>-40.0</factor>
  <offset-deg>30.0</offset-deg>
  <axis>
    <x>0.0</x>
    <y>1.0</y>
    <z>0.0</z>
  </axis>
</animation>
<!--Automatic mixture corrector-->
<animation>
  <type>rotate</type>
  <object-name>blue_handle</object-name>
  <property>/an2/controls/switches/mixture</property>
  <factor>70.0</factor>
  <offset-deg>-45.0</offset-deg>
  <axis>
    <x>0.0</x>
    <y>1.0</y>
    <z>0.0</z>
  </axis>
</animation>

<!--Carb warming-->
<animation>
  <type>rotate</type>
  <object-name>green_handle</object-name>
  <property>/an2/controls/switches/carb_heat</property>
  <factor>-70.0</factor>
  <offset-deg>45.0</offset-deg>
  <axis>
    <x>0.0</x>
    <y>1.0</y>
    <z>0.0</z>
  </axis>
</animation>

<!--Engine stop-->
<animation>
  <type>rotate</type>
  <object-name>red_handle</object-name>
  <offset-deg>-45.0</offset-deg>
  <axis>
    <x>0.0</x>
    <y>1.0</y>
    <z>0.0</z>
  </axis>
</animation>


