<?xml version="1.0" ?>

<PropertyList>
    <name>HotspotArkPanel</name>
    <background>Aircraft/an2/Panels/Textures/transparent-bg.rgb</background>
    
<!--    <background>Aircraft/an2/Instruments-3d/adf-control/ark-control_1.rgb</background>-->
    <w>512</w>
    <h>512</h>
    <instruments>
        <instrument>
            <name>panel hotspots 1</name>
            <x>10</x>
            <y>290</y>
            <w>200</w>
            <h>200</h>
            <w-base>200</w-base>
            <h-base>200</h-base>
            <actions>
<!--+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
                    <action>
                      <name>audio switch on</name>
                      <button>0</button>
                      <x>0</x>
                      <y>0</y>
                      <w>50</w>
                      <h>50</h>
                      <binding>
                        <command>property-assign</command>
                        <property>/instrumentation/adf/ident-audible</property>
                        <value>1</value>
                      </binding>
                      <binding>
                        <command>nasal</command>
                        <script>electrical.update_electric()</script>
                      </binding>
                    </action>
                    <action>
                      <name>audio switch off</name>
                      <button>0</button>
                      <x>0</x>
                      <y>-50</y>
                      <w>50</w>
                      <h>50</h>
                      <binding>
                        <command>property-assign</command>
                        <property>/instrumentation/adf/ident-audible</property>
                        <value>0</value>
                      </binding>
                      <binding>
                        <command>nasal</command>
                        <script>electrical.update_electric()</script>
                      </binding>
              </action>              
            </actions>
	 </instrument>
         <instrument>
           <name>panel hotspots 2</name>
           <x>425</x>
           <y>290</y>
           <w>200</w>
           <h>200</h>
           <w-base>200</w-base>
           <h-base>200</h-base>
           <actions>
             <!--+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
             <action>
               <name>volume up</name>
               <button>0</button>
               <x>0</x>
               <y>0</y>
               <w>50</w>
               <h>50</h>
               <binding>
                 <command>property-adjust</command>
                 <property>/instrumentation/adf/volume-norm</property>
                 <step>0.05</step>
                 <min>0.0</min>
                 <max>1.0</max>
               </binding>
             </action>
             <action>
               <name>volume down</name>
               <button>1</button>
               <x>0</x>
               <y>0</y>
               <w>50</w>
               <h>50</h>
               <binding>
                 <command>property-adjust</command>
                 <property>/instrumentation/adf/volume-norm</property>
                 <step>-0.05</step>
                 <min>0.0</min>
                 <max>1.0</max>
               </binding>
             </action>

           </actions>
         </instrument>

      </instruments>
</PropertyList>
