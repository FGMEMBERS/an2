<?xml version="1.0" ?>

<!--Hotspot panel-->

<PropertyList>
    <name>HotspotLeftDnPanel</name>
    <background>Aircraft/an2/Panels/Textures/transparent-bg.rgb</background>
<!--<background>Aircraft/an2/Instruments-3d/console/console.rgb</background>-->
    <w>512</w>
    <h>512</h>
    <instruments>
         <instrument>
           <name>handles</name>
           <x>256</x>
           <y>256</y>
           <w>512</w>
           <h>512</h>
           <w-base>512</w-base>
           <h-base>512</h-base>
           <actions>
             <!--+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
<!--Mixture corrector-->
             <action>
               <name>blue handle up</name>
               <button>0</button>
               <x>-212</x>
               <y>180</y>
               <w>50</w>
               <h>50</h>
               <binding>
                 <command>property-adjust</command>
                 <property>/an2/controls/switches/mixture</property>
                 <step>-0.05</step>
                 <min>0.0</min>
               </binding>
             </action>
             <action>
               <name>blue handle down</name>
               <button>0</button>
               <x>-212</x>
               <y>-230</y>
               <w>50</w>
               <h>50</h>
               <binding>
                 <command>property-adjust</command>
                 <property>/an2/controls/switches/mixture</property>
                 <step>0.05</step>
                 <max>1.1</max>
               </binding>
             </action>
             <!--+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
             
             <!--Pitch UP - handle forward -->
             <action>
               <name>prop handle up</name>
               <button>0</button>
               <x>-35</x>
               <y>180</y>
               <w>50</w>
               <h>50</h>
               <binding>
                 <command>nasal</command>
                 <script>an2.propeller_pitch_control(1)</script>
               </binding>
               <mod-up>
                 <binding>
                   <command>nasal</command>
                   <script>an2.propeller_pitch_control(0)</script>
                 </binding>
               </mod-up>

             </action>
             
             <!--Pitch DOWN - handle backward -->
             <action>
               <name>prop handle down</name>
               <button>0</button>
               <x>-35</x>
               <y>-230</y>
               <w>50</w>
               <h>50</h>
               <binding>
                 <command>nasal</command>
                 <script>an2.propeller_pitch_control(-1)</script>
               </binding>
               <mod-up>
                 <binding>
                   <command>nasal</command>
                   <script>an2.propeller_pitch_control(0)</script>
                 </binding>
               </mod-up>

             </action>
             <!--+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
