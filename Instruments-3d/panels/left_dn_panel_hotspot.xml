<?xml version="1.0" ?>

<!--Hotspot panel-->

<PropertyList>
    <name>HotspotLeftDnPanel</name>
    <background>Aircraft/an2/Panels/Textures/transparent-bg.rgb</background>
    <w>512</w>
    <h>512</h>
    <instruments>
        <instrument>
            <name>altimeter</name>
            <x>50</x>
            <y>365</y>
            <w>100</w>
            <h>100</h>
            <w-base>100</w-base>
            <h-base>100</h-base>
            <actions>
<!--+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
                    <!-- Increment air pressure - fine -->
                    <action>
                      <name>inc baro fine</name>
                      <button>0</button>
                      <x>25</x>
                      <y>0</y>
                      <w>25</w>
                      <h>50</h>
                      <binding>
                        <command>property-adjust</command>
                        <property>/instrumentation/altimeter/setting-inhg</property>
                        <step>0.01</step>
                        <min>26.0</min>
                        <max>33.0</max>
                      </binding>
                    </action>
                    
                    <!-- Decrement air pressure - fine -->
                    <action>
                      <name>dec baro fine</name>    
                      <button>0</button>
                      <x>0</x>
                      <y>0</y>
                      <w>25</w>
                      <h>50</h>
                      <binding>
                        <command>property-adjust</command>
                        <property>/instrumentation/altimeter/setting-inhg</property>
                        <step>-0.01</step>
                        <min>26.0</min>
                        <max>33.0</max>
                      </binding>
                    </action>
                    
                    <!-- Increment air pressure - coarse -->
                    <action>
                      <name>inc baro coarse</name>
                      <button>1</button>
                      <x>25</x>
                      <y>0</y>
                      <w>25</w>
                      <h>50</h>
                      <binding>
                        <command>property-adjust</command>
                        <property>/instrumentation/altimeter/setting-inhg</property>
                        <step>0.1</step>
                        <min>26.0</min>
                        <max>33.0</max>
                      </binding>
                    </action>
                    
                    <!-- Decrement air pressure - coarse -->
                    <action>
                      <name>dec baro coarse</name>    
                      <button>1</button>
                      <x>0</x>
                      <y>0</y>
                      <w>25</w>
                      <h>50</h>
                      <binding>
                        <command>property-adjust</command>
                        <property>/instrumentation/altimeter/setting-inhg</property>
                        <step>-0.1</step>
                        <min>26.0</min>
                        <max>33.0</max>
                      </binding>
                    </action>

            </actions>
	 </instrument>
         <instrument>
           <name>compass adjust</name>
           <x>392</x>
           <y>465</y>
           <w>100</w>
           <h>100</h>
           <w-base>100</w-base>
           <h-base>100</h-base>
           <actions>
             <!--+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
             <action>
               <name>button</name>
               <button>0</button>
               <x>0</x>
               <y>0</y>
               <w>50</w>
               <h>50</h>
               <binding>
                 <command>property-assign</command>
                 <property>/an2/controls/switches/compass</property>
                 <value>1</value>
               </binding>
               <binding>
                 <command>nasal</command>
                 <script>an2.gik_adjust()</script>
               </binding>
               <mod-up>
                 <binding>
                   <command>property-assign</command>
                   <property>/an2/controls/switches/compass</property>
                   <value>0</value>
                 </binding>
               </mod-up>
             </action>
           </actions>
         </instrument>
         <instrument>
           <name>GIK adjust</name>
           <x>468</x>
           <y>325</y>
           <w>100</w>
           <h>100</h>
           <w-base>100</w-base>
           <h-base>100</h-base>
           <actions>
             <!--+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
             <!-- Heading -->
             <action>
               <name>inc heading</name>
               <button>0</button>
               <x>0</x>
               <y>0</y>
               <w>50</w>
               <h>50</h>
               <binding>
                 <command>property-adjust</command>
                 <property>/instrumentation/adf/rotation-deg</property>
                 <step>-1</step>
               </binding>
             </action>
             <action>
               <name>Dec heading</name>
               <button>1</button>
               <x>0</x>
               <y>0</y>
               <w>50</w>
               <h>50</h>
               <binding>
                 <command>property-adjust</command>
                 <property>/instrumentation/adf/rotation-deg</property>
                 <step>1</step>
               </binding>
             </action>
           </actions>
         </instrument>

         <instrument>
           <name>fuel meter selector</name>
           <x>512</x>
           <!--<x>0</x>-->
           <y>0</y>
           <w>200</w>
           <h>200</h>
           <w-base>200</w-base>
           <h-base>200</h-base>
           <actions>
             <!--+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
             <action>
               <name>right tank</name>
               <button>0</button>
               <x>-10</x>
               <y>60</y>
               <w>50</w>
               <h>50</h>
               <binding>
                 <command>nasal</command>
                 <script>an2.right_tank()</script>
               </binding>
               <mod-up>
                 <binding>
                   <command>nasal</command>
                   <script>an2.total_fuel()</script>
                 </binding>
               </mod-up>
             </action>
             <action>
               <name>left tank</name>
               <button>0</button>
               <x>-80</x>
               <y>60</y>
               <w>50</w>
               <h>50</h>
               <binding>
                 <command>nasal</command>
                 <script>an2.left_tank()</script>
               </binding>
               <mod-up>
                 <binding>
                   <command>nasal</command>
                   <script>an2.total_fuel()</script>
                 </binding>
               </mod-up>
             </action>             
           </actions>
         </instrument>
         
         
      </instruments>
</PropertyList>
