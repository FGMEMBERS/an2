<!-- Left panel for 3d cockpit
3D instrument for An-2-->
<PropertyList>
 <path>left_panel.ac</path>
 <!--Panel low-res texture-->
 <animation>
   <condition>
     <property>/an2/textures/low-res</property>
   </condition>
   <type>material</type>
   <object-name>rect</object-name>
   <texture>left_panel_low.rgb</texture>
   <ambient>
     <red>1.0</red>
     <green>1.0</green>
     <blue>1.0</blue>
   </ambient>
 </animation>
 <!-- External instruments lighting -->
 <animation>
  <type>material</type>
  <object-name>rect</object-name>
  <emission>
    <red-prop>/an2/controls/light/ext-red</red-prop>
    <green-prop>/an2/controls/light/ext-green</green-prop>
    <blue-prop>/an2/controls/light/ext-blue</blue-prop>
  </emission>
</animation>
<animation>
  <type>material</type>
  <object-name>lamp_base_1</object-name>
  <object-name>lamp_base_2</object-name>
  <object-name>lamp_base_3</object-name>
  <object-name>fuel_lamp_base_1</object-name>
  <object-name>fuel_lamp_base_2</object-name>
  <object-name>comp_base_1</object-name>
  <emission>
    <red-prop>/an2/controls/light/ext-red</red-prop>
    <green-prop>/an2/controls/light/ext-green</green-prop>
    <blue-prop>/an2/controls/light/ext-blue</blue-prop>
  </emission>
</animation>
<!--UV staff-->
<animation>
  <type>select</type>
  <object-name>comp_base_uv</object-name>
  <condition>
    <property>/an2/controls/switches/uv_light</property>
  </condition>
</animation>
<animation>
  <type>material</type>
  <object-name>comp_base_uv</object-name>
  <condition>
    <property>/an2/controls/switches/uv_light</property>
  </condition>
  <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
    <factor-prop>/an2/controls/light/uv-bright</factor-prop>
  </emission>
</animation>

<!-- Button -->
<animation>
  <type>select</type>
  <object-name>comp_base_1</object-name>
  <condition>
    <not>
      <property>/an2/controls/switches/compass</property>
    </not>
  </condition>
</animation>
<animation>
  <type>select</type>
  <object-name>comp_base_2</object-name>
  <condition>
      <property>/an2/controls/switches/compass</property>
  </condition>
</animation>
<!--lamps-->
<animation>
  <type>material</type>
  <object-name>no_fuel_left</object-name>
  <condition>
    <and>
      <property>/an2/instrumentation/sbess/serviceable</property>
      <less-than>
        <property>/consumables/fuel/tank[1]/level-gal_us</property>
        <value>13.21</value> <!--50 l = 13.21 gal-->
      </less-than>
    </and>
  </condition>
  <emission>
      <red>0.8</red>
      <green>0.8</green>
      <blue>0.8</blue>
  </emission>
</animation>
<animation>
  <type>material</type>
  <object-name>no_fuel_left</object-name>
  <condition>
   <not>
    <and>
      <property>/an2/instrumentation/sbess/serviceable</property>
      <less-than>
        <property>/consumables/fuel/tank[1]/level-gal_us</property>
        <value>13.21</value> <!--50 l = 13.21 gal-->
      </less-than>
    </and>
   </not>
  </condition>
  <emission>
    <red>0.0</red>
    <green>0.0</green>
    <blue>0.0</blue>
  </emission>
</animation>
<animation>
  <type>material</type>
  <object-name>no_fuel_right</object-name>
  <condition>
    <and>
      <property>/an2/instrumentation/sbess/serviceable</property>
      <less-than>
        <property>/consumables/fuel/tank[2]/level-gal_us</property>
        <value>13.21</value> <!--50 l = 13.21 gal-->
      </less-than>
    </and>
  </condition>
  <emission>
    <red>0.8</red>
    <green>0.8</green>
    <blue>0.8</blue>
  </emission>
</animation>
<animation>
  <type>material</type>
  <object-name>no_fuel_right</object-name>
  <condition>
    <not>
      <and>
        <property>/an2/instrumentation/sbess/serviceable</property>
        <less-than>
          <property>/consumables/fuel/tank[2]/level-gal_us</property>
          <value>13.21</value> <!--50 l = 13.21 gal-->
        </less-than>
      </and>
    </not>
  </condition>
  <emission>
    <red>0.0</red>
    <green>0.0</green>
    <blue>0.0</blue>
  </emission>
</animation>

<animation>
  <type>material</type>
  <object-name>gener_lamp</object-name>
  <emission>
    <red>0.8</red>
    <green>0.2</green>
    <blue>0.2</blue>
    <factor-prop>/an2/systems/electrical/generator_lamp</factor-prop>
  </emission>
</animation>

<animation>
  <type>material</type>
  <object-name>rv_lamp</object-name>
  <emission>
    <red>0.8</red>
    <green>0.2</green>
    <blue>0.2</blue>
    <factor-prop>/an2/instrumentation/rv-um/lamp</factor-prop>
  </emission>
</animation>

<animation>
  <type>material</type>
  <object-name>marker_lamp</object-name>
  <condition>
    <or>
      <property>/instrumentation/marker-beacon/inner</property>
      <property>/instrumentation/marker-beacon/middle</property>
      <property>/instrumentation/marker-beacon/outer</property>
    </or>
  </condition>                        
  <emission>
    <red>0.8</red>
    <green>0.8</green>
    <blue>0.8</blue>
  </emission>
</animation>
<animation>
  <type>material</type>
  <object-name>marker_lamp</object-name>
  <condition>
   <not>
    <or>
      <property>/instrumentation/marker-beacon/inner</property>
      <property>/instrumentation/marker-beacon/middle</property>
      <property>/instrumentation/marker-beacon/outer</property>
    </or>
   </not>
  </condition>                        
  <emission>
    <red>0.0</red>
    <green>0.0</green>
    <blue>0.0</blue>
  </emission>
</animation>



</PropertyList>
