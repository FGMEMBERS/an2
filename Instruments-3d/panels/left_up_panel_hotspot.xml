<!--Hotspot panel-->

<PropertyList>
    <name>HotspotLeftUpPanel</name>
    <background>Aircraft/an2/Panels/Textures/transparent-bg.rgb</background>
    <w>512</w>
    <h>512</h>
    <instruments>
        <instrument>
            <name>panel hotspots 1</name>
            <x>190</x>
            <y>410</y>
            <w>200</w>
            <h>200</h>
            <w-base>200</w-base>
            <h-base>200</h-base>
            <actions>
<!--+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
                    <action>
                      <name>starter switch on</name>
                      <button>0</button>
                      <x>0</x>
                      <y>0</y>
                      <w>50</w>
                      <h>50</h>
                      <binding>
                        <command>property-assign</command>
                        <property>/an2/controls/switches/starter_switch</property>
                        <value>1</value>
                      </binding>
                      <binding>
                        <command>nasal</command>
                        <script>electrical.update_electric()</script>
                      </binding>
                    </action>
                    <action>
                      <name>starter switch off</name>
                      <button>0</button>
                      <x>0</x>
                      <y>-50</y>
                      <w>50</w>
                      <h>50</h>
                      <binding>
                        <command>property-assign</command>
                        <property>/an2/controls/switches/starter_switch</property>
                        <value>0</value>
                      </binding>
                      <binding>
                        <command>nasal</command>
                        <script>electrical.update_electric()</script>
                      </binding>
              </action>              
            </actions>
	 </instrument>
         <instrument>
           <name>PM hotspot</name>
           <x>300</x>
           <y>380</y>
           <w>200</w>
           <h>200</h>
           <w-base>200</w-base>
           <h-base>200</h-base>
           <actions>
             <!--+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
             <action>
               <name>ignition up</name>
               <button>0</button>
               <x>0</x>
               <y>0</y>
               <w>50</w>
               <h>50</h>
               <binding>
                 <command>property-adjust</command>
                 <property>/controls/engines/engine/magnetos</property>
                 <step>1</step>
                 <max>3</max>
                 <min>0</min>
               </binding>
             </action>
             <action>
               <name>ignition down</name>
               <button>1</button>
               <x>0</x>
               <y>0</y>
               <w>50</w>
               <h>50</h>
               <binding>
                 <command>property-adjust</command>
                 <property>/controls/engines/engine/magnetos</property>
                 <step>-1</step>
                 <max>3</max>
                 <min>0</min>
               </binding>
             </action>
           </actions>
         </instrument>
         <instrument>
           <name>panel hotspots 3</name>
           <x>440</x>
           <y>390</y>
           <w>200</w>
           <h>200</h>
           <w-base>200</w-base>
           <h-base>200</h-base>
           <actions>
             <!--+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
             <action>
               <name>starter selector left</name>
               <button>0</button>
               <x>-10</x>
               <y>-10</y>
               <w>50</w>
               <h>50</h>
               <binding>
                 <command>nasal</command>
                 <script>electrical.spinup()</script>
               </binding>
               <binding>
                 <command>nasal</command>
                 <script>electrical.update_electric()</script>
               </binding>
               
               <mod-up>
                 <binding>
                   <command>nasal</command>
                   <script>electrical.starter_idle()</script>
                 </binding>
               </mod-up>
             </action>
             <action>
               <name>starter selector right</name>
               <button>0</button>
               <x>60</x>
               <y>-10</y>
               <w>50</w>
               <h>50</h>
               <binding>
                 <command>nasal</command>
                 <script>electrical.starter_on()</script>
               </binding>               
               <mod-up>
                 <binding>
                   <command>nasal</command>
                   <script>electrical.starter_idle()</script>
                 </binding>
               </mod-up>
             </action>              
           </actions>
         </instrument>
         <instrument>
           <name>GPK-AGK hotspots</name>
           <x>170</x>
           <y>130</y>
           <w>200</w>
           <h>200</h>
           <w-base>200</w-base>
           <h-base>200</h-base>
           <actions>
             <!--+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
             <action>
               <name>GPK cage</name>
               <button>0</button>
               <x>15</x>
               <y>0</y>
               <w>20</w>
               <h>50</h>
               <binding>
                 <command>nasal</command>
                 <script>an2.gpk_caged()</script>
               </binding>
             </action>
             <action>
               <name>heading left</name>
               <button>0</button>
               <x>-5</x>
               <y>0</y>
               <w>20</w>
               <h>50</h>
               <binding>
                 <command>property-adjust</command>
                 <property>/instrumentation/heading-indicator/offset-deg</property>
                 <step>-0.1</step>
               </binding>
             </action>
             <action>
               <name>heading right</name>
               <button>0</button>
               <x>35</x>
               <y>0</y>
               <w>20</w>
               <h>50</h>
               <binding>
                 <command>property-adjust</command>
                 <property>/instrumentation/heading-indicator/offset-deg</property>
                 <step>0.1</step>
               </binding>
             </action>
             <!--+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
             <action>
               <name>AGK cage</name>
               <button>0</button>
               <x>-45</x>
               <y>10</y>
               <w>40</w>
               <h>50</h>
               <binding>
                 <command>property-toggle</command>
                 <property>/instrumentation/attitude-indicator/caged-flag</property>
               </binding>
             </action>           
           </actions>
         </instrument>
         
         <instrument>
           <name>AGK hotspots</name>
           <x>0</x>
           <y>110</y>
           <w>200</w>
           <h>200</h>
           <w-base>200</w-base>
           <h-base>200</h-base>
           <actions>
             <action>
               <name>Vizir up</name>
               <button>0</button>
               <x>-85</x>
               <y>0</y>
               <w>50</w>
               <h>50</h>
               <condition>
                 <property>/instrumentation/attitude-indicator/caged-flag</property>
               </condition>
               <binding>
                 <command>property-adjust</command>
               <property>/instrumentation/attitude-indicator/horizon-offset-deg</property>
                 <step>1</step>	    
                 <min>-80</min>
                 <max>80</max>
               </binding>
             </action>
             <action>
               <name>Vizir down</name>
               <button>1</button>
               <x>-85</x>
               <y>0</y>
               <w>50</w>
               <h>50</h>
               <condition>
                 <property>/instrumentation/attitude-indicator/caged-flag</property>
               </condition>
               <binding>
                 <command>property-adjust</command>
               <property>/instrumentation/attitude-indicator/horizon-offset-deg</property>
                 <step>-1</step>	    
                 <min>-80</min>
                 <max>80</max>
               </binding>
             </action>
           
           </actions>
         </instrument>

      </instruments>
</PropertyList>
