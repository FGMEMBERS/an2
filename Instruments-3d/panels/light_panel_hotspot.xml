<PropertyList>
    <name>LightPanel</name>
<background>Aircraft/an2/Panels/Textures/transparent-bg.rgb</background>
<!--<background>Aircraft/an2/Instruments-3d/panels/light_panel.rgb</background>-->
    <w>128</w>
    <h>512</h>
    <instruments>
        <instrument>
            <name>panel hotspots 1</name>
            <x>38</x>
            <y>256</y>
            <w>128</w>
            <h>512</h>
            <w-base>128</w-base>
            <h-base>512</h-base>
            <actions>
<!--+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
              <action>
                <name>ano on</name>
                <button>0</button>
                <x>0</x>
                <y>-135</y>
                <w>50</w>
                <h>50</h>
                <binding>
                  <command>property-assign</command>
                  <property>/an2/controls/switches/nav_light_switch</property>
                  <value>1</value>
                </binding>
                <binding>
                  <command>nasal</command>
                  <script>electrical.update_electric()</script>
                </binding>
              </action>

<!--+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
                    <action>
                      <name>ano off</name>
                      <button>0</button>
                      <x>0</x>
                      <y>-250</y>
                      <w>50</w>
                      <h>50</h>
                      <binding>
                        <command>property-assign</command>
                        <property>/an2/controls/switches/nav_light_switch</property>
                        <value>0</value>
                      </binding>
                      <binding>
                        <command>nasal</command>
                        <script>electrical.update_electric()</script>
                      </binding>
                    </action>
<!--+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
                    <action>
                      <name>taxi on</name>
                      <button>0</button>
                      <x>0</x>
                      <y>35</y>
                      <w>50</w>
                      <h>50</h>
                      <binding>
                        <command>property-assign</command>
                        <property>/an2/controls/switches/taxi_light_switch</property>
                        <value>1</value>
                      </binding>
                      <binding>
                        <command>nasal</command>
                        <script>electrical.update_electric()</script>
                      </binding>
                    </action>
<!--+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
                    <action>
                      <name>taxi off</name>
                      <button>0</button>
                      <x>0</x>
                      <y>-80</y>
                      <w>50</w>
                      <h>50</h>
                      <binding>
                        <command>property-assign</command>
                        <property>/an2/controls/switches/taxi_light_switch</property>
                        <value>0</value>
                      </binding>
                      <binding>
                        <command>nasal</command>
                        <script>electrical.update_electric()</script>
                      </binding>
                    </action>
<!--+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
                    <action>
                      <name>landing on</name>
                      <button>0</button>
                      <x>0</x>
                      <y>200</y>
                      <w>50</w>
                      <h>50</h>
                      <binding>
                        <command>property-assign</command>
                        <property>/an2/controls/switches/landing_light_switch</property>
                        <value>1</value>
                      </binding>
                      <binding>
                        <command>nasal</command>
                        <script>electrical.update_electric()</script>
                      </binding>
                    </action>
                    <action>
                      <name>landing off</name>
                      <button>0</button>
                      <x>0</x>
                      <y>90</y>
                      <w>50</w>
                      <h>50</h>
                      <binding>
                        <command>property-assign</command>
                        <property>/an2/controls/switches/landing_light_switch</property>
                        <value>0</value>
                      </binding>
                      <binding>
                        <command>nasal</command>
                        <script>electrical.update_electric()</script>
                      </binding>
                    </action>
            </actions>
	 </instrument>
<!--*******************************************************************-->
      </instruments>
</PropertyList>
