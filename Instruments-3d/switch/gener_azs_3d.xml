<!-- Switch
3D instrument for An-2-->
<PropertyList>
 <path>switch.ac</path>
<!-- External instruments lighting -->
<animation>
  <type>material</type>
  <object-name>base</object-name>
  <emission>
    <red-prop>/an2/controls/light/ext-red</red-prop>
    <green-prop>/an2/controls/light/ext-green</green-prop>
    <blue-prop>/an2/controls/light/ext-blue</blue-prop>
  </emission>
</animation>
<animation>
  <type>material</type>
  <object-name>handle</object-name>
  <emission>
    <red-prop>/an2/controls/light/ext-red</red-prop>
    <green-prop>/an2/controls/light/ext-green</green-prop>
    <blue-prop>/an2/controls/light/ext-blue</blue-prop>
  </emission>
</animation>

<!--UV staff-->
<animation>
  <type>material</type>
  <object-name>spot</object-name>
  <condition>
    <property>/an2/controls/switches/uv_light</property>
  </condition>
 <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
    <factor-prop>/an2/controls/light/uv-bright</factor-prop>
  </emission>
</animation>
<animation>
  <type>material</type>
  <object-name>spot</object-name>
  <condition>
    <not>
     <property>/an2/controls/switches/uv_light</property>
    </not>
  </condition>
  <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
    <factor>0.0</factor>
  </emission>
</animation>

<!--Handle-->
<animation>
    <type>rotate</type>
    <object-name>handle</object-name>
    <property>/an2/controls/switches/generator</property>
    <offset-deg>30.0</offset-deg>
    <factor>-60.0</factor>
    <center>
      <x-m>0.002</x-m>
      <y-m>0.0</y-m>
      <z-m>0.0</z-m>
    </center>
    <axis>
      <x>0.0</x>
      <y>1.0</y>
      <z>0.0</z>
    </axis>
</animation>

</PropertyList>
