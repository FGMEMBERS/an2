<PropertyList>

<name>Avia clock</name>
 
   <w-base>256</w-base>
   <h-base>256</h-base>
   
<layers>
    <layer>
	<name>base</name>
	<texture>                           
    	    <path>Aircraft/an2/Instruments/Textures/achs-2_1.rgb</path>
	    <x1>0.0</x1>
	    <y1>0.0</y1>
	    <x2>1.0</x2>
	    <y2>1.0</y2>
	</texture>
	<w>256</w>
	<h>256</h>
    </layer>
    <layer>
	    <name> uv light </name>
	    <condition>
		    <property>/an2/controls/switches/uv_light</property>
	    </condition> 
	    <emissive>true</emissive>
	    <texture>                           
		    <path>Aircraft/an2/Instruments/Textures/achs-2_uv.rgb</path>
		    <x1>0.0</x1>
		    <y1>0.0</y1>
		    <x2>1.0</x2>
		    <y2>1.0</y2>
	    </texture>
	    <w>195</w>
	    <h>195</h>
    </layer>  
    <!-- Clock -->
    <layer>
	<name>hour needle</name>
	<texture>                           
    	    <path>Aircraft/an2/Instruments/Textures/achs-2_2.rgb</path>
	    <x1>0.0</x1>
	    <y1>0.85</y1>
	    <x2>1.0</x2>
	    <y2>1.0</y2>
	</texture>
	<w>128</w>
	<h>16</h>
	<transformations>	    
	    <transformation>
		<type>rotation</type>
		<scale>0.5</scale>
		<property>/instrumentation/clock/indicated-min</property>
	    </transformation>
	    <transformation>
		<type>rotation</type>
		<scale>30</scale>
		<property>/instrumentation/clock/local-hour</property>
		<offset>-90</offset>		
	    </transformation>
	    <transformation>
		<type>x-shift</type>
		<offset>56</offset>		
	    </transformation>
	</transformations>
	
    </layer>
    <layer>
	    <name>hour needle with uv light</name>
