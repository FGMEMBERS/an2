<?xml version="1.0"?>

<!--
Gauge for AN-2 model
GIK fast adjust button
Yurik V. Nikiforoff, aug 2006
-->

<PropertyList>

 <name>Compass fast adjust button</name>
 
   <w-base>64</w-base>
   <h-base>64</h-base>
   
<layers>
    <layer>
         <name>button up</name>
	 <condition>
		 <not>
		 <property>/an2/controls/switches/compass</property>
	 	</not>
	 </condition>
	 <texture>   
    	    <path>Aircraft/an2/Instruments/Textures/compass_1.rgb</path>
            <x1>0.0</x1>
	    <y1>0.0</y1>
    	    <x2>1.0</x2>
    	    <y2>1.0</y2>
        </texture>
	<w>64</w>
        <h>64</h>
    </layer>
    
    <layer>
	    <name>button down</name>
	    <condition>
		    <property>/an2/controls/switches/compass</property>
	    </condition>
	    <texture>   
		    <path>Aircraft/an2/Instruments/Textures/compass_2.rgb</path>
		    <x1>0.0</x1>
		    <y1>0.0</y1>
		    <x2>1.0</x2>
		    <y2>1.0</y2>
	    </texture>
	    <w>64</w>
	    <h>64</h>
    </layer>
    <layer>
	    <name>base with uv light</name>
	    <condition>
		    <property>/an2/controls/switches/uv_light</property>
	    </condition>
	    <texture>   
		    <path>Aircraft/an2/Instruments/Textures/compass_1_uv.rgb</path>
		    <x1>0.0</x1>
		    <y1>0.0</y1>
		    <x2>1.0</x2>
		    <y2>1.0</y2>
	    </texture>
	    <w>55</w>
	    <h>55</h>
	    <emissive>true</emissive>
    </layer>

</layers>
<actions>
  <action>
	<name>button</name>
	<button>0</button>
	<x>-15</x>
	<y>-14</y>
	<w>30</w>
	<h>30</h>
	<binding>
		<command>property-assign</command>
		<property>/an2/controls/switches/compass</property>
		<value>1</value>
	</binding>
	<binding>
		<command>nasal</command>
		<script>an2.gik_adjust()</script>
	</binding>
	<mod-up>
		<binding>
			<command>property-assign</command>
			<property>/an2/controls/switches/compass</property>
			<value>0</value>
		</binding>
	</mod-up>
  </action>
</actions>

</PropertyList>
