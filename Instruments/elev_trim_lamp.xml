<PropertyList>

 <name>Green trimmer lamp</name>
 
   <w-base>64</w-base>
   <h-base>64</h-base>
   
<layers>
    <layer>
	<name>lamp on</name>
        <condition>
	<property>/an2/systems/electrical/bus-27</property>
	 <not>
	    <property>/controls/flight/elevator-trim</property>
    	 </not>
	</condition>                        
	<texture>                           
    	    <path>Aircraft/an2/Instruments/Textures/trimmer_lamp_on.rgb</path>
	    <x1>0.0</x1>
	    <y1>0.0</y1>
	    <x2>1.0</x2>
	    <y2>1.0</y2>
	</texture>
	<emissive>true</emissive>
	<w>64</w>
	<h>64</h>
    </layer>

    <layer>
	<name>lamp off</name>
	<condition>
	    <or>
		<not>
		<property>/an2/systems/electrical/bus-27</property>
		</not>
		<property>/controls/flight/elevator-trim</property>
	    </or>
	</condition>                        
	<texture>                           
    	    <path>Aircraft/an2/Instruments/Textures/trimmer_lamp_off.rgb</path>
	    <x1>0.0</x1>
	    <y1>0.0</y1>
	    <x2>1.0</x2>
	    <y2>1.0</y2>
	</texture>
	<w>64</w>
	<h>64</h>
    </layer>
</layers>
<actions>
	<action>
		<name>center trim</name>
		<button>0</button>
		<x>-25</x>
		<y>0</y>
		<w>30</w>
		<h>30</h>
		<binding>
		<command>property-assign</command>
			<property>/controls/flight/elevator-trim</property>
			<value>0</value>
		</binding>
    </action>
</actions>
</PropertyList>
