<?xml version="1.0"?>

<!--
Gauge for AN-2 model
EMI-3K gauge
Yurik V. Nikiforoff, aug 2006
-->

<PropertyList>

	<name>EMI-3K gauge</name>
 
   <w-base>256</w-base>
   <h-base>256</h-base>
   
<layers>
    <layer>
         <name>face</name>
	 <texture>   
    	    <path>Aircraft/an2/Instruments/Textures/emi-3k_1.rgb</path>
            <x1>0.0</x1>
	    <y1>0.0</y1>
    	    <x2>1.0</x2>
    	    <y2>1.0</y2>
        </texture>
	<w>256</w>
        <h>256</h>
    </layer>  
    <layer>
	    <name>face with uv light</name>
	    <condition>
		    <property>/an2/controls/switches/uv_light</property>
	    </condition> 
	    <emissive>true</emissive>
	    <texture>   
		    <path>Aircraft/an2/Instruments/Textures/emi-3k_1_uv.rgb</path>
		    <x1>0.0</x1>
		    <y1>0.0</y1>
		    <x2>1.0</x2>
		    <y2>1.0</y2>
	    </texture>
	    <w>200</w>
	    <h>200</h>
	    <transformations>
		    <transformation>
			    <type>y-shift</type>
			    <offset>10</offset>
		    </transformation>
	    </transformations>
    </layer>

    <layer>
	<name>needle 1</name>
	<texture>
    	    <path>Aircraft/an2/Instruments/Textures/emi-3k_2.rgb</path>
	    <x1>0.5</x1>
	    <y1>0.0</y1>
	    <x2>1.0</x2>
	    <y2>1.0</y2>
	</texture>
        <w>35</w>
	<h>70</h>
	<transformations>
		<transformation>
			<type>y-shift</type>
			<offset>22</offset>
		</transformation>
		<transformation>
		<type>rotation</type>
			<offset>-60</offset>
		</transformation>

	    <transformation>
		<type>rotation</type>
		<condition>
			<property>/an2/instrumentation/emi-3k/serviceable</property>
		</condition> 
		<scale>0.47002</scale>
		<property>/engines/engine/oil-temperature-degf</property>
		<offset>-20</offset>
		<min>-100</min>
		<max>300</max>
		<wrap>true</wrap>
	    </transformation>

	    <transformation>
		<type>x-shift</type>
		<offset>10</offset>
	    </transformation>
	    <transformation>
		<type>y-shift</type>
		<offset>30</offset>
	    </transformation>
	</transformations>
    </layer> 
