<?xml version="1.0"?>

<!--
Gauge for AN-2 model
Modified for FG by Yurik V. Nikiforoff
-->

<PropertyList>

 <name>Engine damper</name>
 
   <w-base>256</w-base>
   <h-base>256</h-base>
   
<layers>
    <layer>
     <name>face</name>
     <texture>   
     <path>Aircraft/an2/Instruments/Textures/damper.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>1.0</x2>
     <y2>1.0</y2>
     </texture>
     <w>256</w>
     <h>256</h>
    </layer>
    
    <layer>
	<name>face with uv light</name>
	<condition>
		<property>/an2/controls/switches/uv_light</property>
	</condition> 
	<emissive>true</emissive>
	<texture>   
		<path>Aircraft/an2/Instruments/Textures/damper_uv.rgb</path>
		<x1>0.0</x1>
		<y1>0.0</y1>
		<x2>1.0</x2>
		<y2>1.0</y2>
	</texture>
	<w>195</w>
	<h>195</h>
	<transformations>
		<transformation>
			<type>x-shift</type>
			<offset>34</offset>
		</transformation>
		<transformation>
			<type>y-shift</type>
			<offset>-5</offset>
		</transformation>

	</transformations>
    </layer>

    <layer>
    <name>needle</name>
    <texture>
    <path>Aircraft/an2/Instruments/Textures/needle.rgb</path>
    <x1>0.0</x1>
    <x2>1.0</x2>
    <y1>0.0</y1>
    <y2>1.0</y2>
    </texture>
    <w>16</w>
    <h>128</h>
   <transformations>
	   <transformation>
		   <type>rotation</type>
		   <property>/an2/systems/dampers/air-damper</property>
		   <scale>180</scale>
		   <offset>0</offset>
	   </transformation>

	    <transformation>
		<type>y-shift</type>
		<offset>30</offset>
	    </transformation>
   </transformations>
    </layer> 
    <layer>
	    <name>needle with uv light</name>
	    <condition>
		    <property>/an2/controls/switches/uv_light</property>
	    </condition> 
	    <emissive>true</emissive>
	    <texture>
		    <path>Aircraft/an2/Instruments/Textures/needle_uv.rgb</path>
		    <x1>0.0</x1>
		    <x2>1.0</x2>
		    <y1>0.0</y1>
		    <y2>1.0</y2>
	    </texture>
	    <w>16</w>
	    <h>128</h>
	    <transformations>
		    <transformation>
			    <type>rotation</type>
			    <property>/an2/systems/dampers/air-damper</property>
			    <scale>180</scale>
			    <offset>0</offset>
		    </transformation>
		    <transformation>
			    <type>y-shift</type>
			    <offset>30</offset>
		    </transformation>
	    </transformations>
    </layer> 

</layers>



</PropertyList>
