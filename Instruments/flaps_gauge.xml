<?xml version="1.0"?>

<!--
AN-2 gauge
Modified for FG by Yurik V. Nikiforoff
-->

<PropertyList>

 <name>Flaps control</name>
 
   <w-base>256</w-base>
   <h-base>256</h-base>
   
<layers>
     <layer>
	<name>face</name>
	<texture>   
		<path>Aircraft/an2/Instruments/Textures/flaps_1.rgb</path>
		<x1>0.0</x1>
		<y1>0.0</y1>
		<x2>1.0</x2>
		<y2>1.0</y2>
	</texture>
	<w>256</w>
	<h>256</h>
    </layer>
    <layer>
     <name>face with uv light</name>
     <condition>
	     <property>/an2/controls/switches/uv_light</property>
     </condition> 
     <emissive>true</emissive>
     <texture>   
     <path>Aircraft/an2/Instruments/Textures/flaps_gauge_1_uv.rgb</path>
     <x1>0.0</x1>
     <y1>0.0</y1>
     <x2>1.0</x2>
     <y2>1.0</y2>
     </texture>
     <w>225</w>
     <h>225</h>
     <transformations>
	<transformation>
		<type>x-shift</type>
		<offset>29</offset>
	</transformation>
     </transformations>

    </layer>

    <layer>
    <name>needle</name>
    <texture>
    <path>Aircraft/an2/Instruments/Textures/needle.rgb</path>
    <x1>0.0</x1>
    <x2>1.0</x2>
    <y1>0.0</y1>
    <y2>1.0</y2>
    </texture>
    <w>16</w>
    <h>128</h>
   <transformations>
	    <transformation>
	    <condition>
		    <property>/an2/instrumentation/flaps/serviceable</property>
	    </condition>
		<type>rotation</type>
		<scale>160</scale>
		<property>/surface-positions/flap-pos-norm</property>
		<offset>0</offset>	
	    </transformation>
    <transformation>
    <type>y-shift</type>
    <offset>30</offset>
    </transformation>
   </transformations>
    </layer> 
<layer>
	<name>needle with uv light</name>
	<condition>
		<property>/an2/controls/switches/uv_light</property>
	</condition> 
	<emissive>true</emissive>
	<texture>
		<path>Aircraft/an2/Instruments/Textures/needle_uv.rgb</path>
		<x1>0.0</x1>
		<x2>1.0</x2>
		<y1>0.0</y1>
		<y2>1.0</y2>
	</texture>
	<w>16</w>
	<h>128</h>
	<transformations>
		<transformation>
			<condition>
			<property>/an2/instrumentation/flaps/serviceable</property>
			</condition>		
			<type>rotation</type>
			<scale>160</scale>
			<property>/surface-positions/flap-pos-norm</property>
			<offset>0</offset>	
		</transformation>
		
		<transformation>
			<type>y-shift</type>
			<offset>30</offset>
		</transformation>
	</transformations>
</layer> 

</layers>


</PropertyList>
