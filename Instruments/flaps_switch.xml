<PropertyList>

 <name>Flaps switch</name>
 
   <w-base>64</w-base>
   <h-base>64</h-base>
   
<layers>
    <layer>
	<name>Flaps switch pos 1</name>
        <condition>
	    <not>
	    <property>/controls/flight/flaps</property>
    	    </not>
	</condition>                        
	<texture>                           
    	    <path>Aircraft/an2/Instruments/Textures/flaps_switch_1.rgb</path>
	    <x1>0.0</x1>
	    <y1>0.0</y1>
	    <x2>1.0</x2>
	    <y2>1.0</y2>
	</texture>
	<w>64</w>
	<h>64</h>
    </layer>

    <layer>
	<name>switch pos 2</name>
        <condition>
	    <property>/controls/flight/flaps</property>
	</condition>                        
	<texture>                           
    	    <path>Aircraft/an2/Instruments/Textures/flaps_switch_2.rgb</path>
	    <x1>0.0</x1>
	    <y1>0.0</y1>
	    <x2>1.0</x2>
	    <y2>1.0</y2>
	</texture>
	<w>53</w>
	<h>53</h>
	<transformations>
	    <transformation>
		<type>x-shift</type>
		<offset>-6</offset>
    	    </transformation>
    	    <transformation>
		<type>y-shift</type>
		<offset>-6</offset>
	    </transformation>
	</transformations>
    </layer>





