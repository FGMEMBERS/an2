Yurik V. Nikiforoff, sep 2006
-->

<PropertyList>

 <name>Fuel meter selector switch</name>
 
   <w-base>64</w-base>
   <h-base>64</h-base>
   
<layers>
    <layer>
		<name>switch pos 1</name>
		<condition>
			<equals>
			 <property>/an2/controls/switches/fuel_selector</property>
			 <value>1</value>
			</equals>
		</condition>                        
		<texture>                           
			<path>Aircraft/an2/Instruments/Textures/switch_2_1.rgb</path>
			<x1>0.0</x1>
			<y1>0.0</y1>
			<x2>1.0</x2>
			<y2>1.0</y2>
		</texture>
		<w>32</w>
		<h>32</h>
		<transformations>
			<transformation>
				<type>rotation</type>
				<offset>90</offset>
			</transformation>
			<transformation>
				<type>x-shift</type>
				<offset>6</offset>
			</transformation>
			<transformation>
				<type>y-shift</type>
				<offset>-14</offset>
			</transformation>
		</transformations>
	</layer>
	<layer>
		<name>switch pos 1 with uv light</name>
		<condition>
			<property>/an2/controls/switches/uv_light</property>
			<equals>
			<property>/an2/controls/switches/fuel_selector</property>
			<value>1</value>
			</equals>
		</condition>
		<emissive>true</emissive>
		<texture>                           
			<path>Aircraft/an2/Instruments/Textures/uv_spot.rgb</path>
			<x1>0.0</x1>
			<y1>0.0</y1>
			<x2>1.0</x2>
			<y2>1.0</y2>
		</texture>
		<w>5</w>
		<h>5</h>
		<transformations>
			<transformation>
				<type>x-shift</type>
				<offset>-26</offset>
			</transformation>
			<transformation>
				<type>y-shift</type>
				<offset>0</offset>
			</transformation>
		</transformations>
	</layer>
	
	<layer>
		<name>switch pos 0</name>
		<condition>
			<not>
			<property>/an2/controls/switches/fuel_selector</property>
			</not>
		</condition>
		<texture>                           
			<path>Aircraft/an2/Instruments/Textures/switch_2_2.rgb</path>
			<x1>0.0</x1>
			<y1>0.0</y1>
			<x2>1.0</x2>
			<y2>1.0</y2>
		</texture>
		<w>20</w>
		<h>20</h>
	<transformations>
		<transformation>
			<type>x-shift</type>
			<offset>-9</offset>
		</transformation>
	</transformations>
</layer>
<layer>
	<name>switch pos 0 with uv light</name>
	<condition>
		<property>/an2/controls/switches/uv_light</property>
		<not>
		<property>/an2/controls/switches/fuel_selector</property>
		</not>
	</condition> 
	<emissive>true</emissive>
	<texture>                           
		<path>Aircraft/an2/Instruments/Textures/uv_spot.rgb</path>
		<x1>0.0</x1>
		<y1>0.0</y1>
		<x2>1.0</x2>
		<y2>1.0</y2>
	</texture>
	<w>5</w>
	<h>5</h>
	<transformations>
		<transformation>
			<type>x-shift</type>
			<offset>-9</offset>
		</transformation>
	</transformations>
</layer>
	
<layer>
		<name>switch pos 2</name>
		<condition>
			<equals>
			<property>/an2/controls/switches/fuel_selector</property>
			<value>2</value>
			</equals>
		</condition> 
		<texture>                           
			<path>Aircraft/an2/Instruments/Textures/switch_2_3.rgb</path>
			<x1>0.0</x1>
			<y1>0.0</y1>
			<x2>1.0</x2>
			<y2>1.0</y2>
		</texture>
		<w>32</w>
		<h>32</h>
		<transformations>
			<transformation>
				<type>rotation</type>
				<offset>90</offset>
			</transformation>
			<transformation>
				<type>x-shift</type>
				<offset>6</offset>
			</transformation>
			<transformation>
				<type>y-shift</type>
				<offset>-3</offset>
			</transformation>
		</transformations>
	</layer>
	
	
	
	<layer>
		<name>switch pos 2 with uv light</name>
		<condition>
			<property>/an2/controls/switches/uv_light</property>
			<equals>
			<property>/an2/controls/switches/fuel_selector</property>
			<value>2</value>
			</equals>
		</condition> 
		<emissive>true</emissive>
		<texture>                           
			<path>Aircraft/an2/Instruments/Textures/uv_spot.rgb</path>
			<x1>0.0</x1>
			<y1>0.0</y1>
			<x2>1.0</x2>
			<y2>1.0</y2>
		</texture>
		<w>5</w>
		<h>5</h>
		<transformations>
			<transformation>
				<type>x-shift</type>
				<offset>9</offset>
			</transformation>
			<transformation>
				<type>y-shift</type>
				<offset>0</offset>
			</transformation>
		</transformations>
	</layer>
</layers>

<!--Set switch-->
<actions>
	<action>
		<name>Right position</name>
		<button>0</button>
		<x>-8</x>
		<y>-12</y>
		<w>23</w>
		<h>23</h>
		<binding>
			<command>nasal</command>
			<script>an2.right_tank()</script>
		</binding>
		<mod-up>
			<binding>
				<command>nasal</command>
				<script>an2.total_fuel()</script>
			</binding>
		</mod-up>

	</action>
	<action>
		<name>Left position</name>
		<button>0</button>
		<x>-32</x>
		<y>-12</y>
		<w>23</w>
		<h>23</h>
		<binding>
			<command>nasal</command>
			<script>an2.left_tank()</script>
		</binding>
		<mod-up>
			<binding>
				<command>nasal</command>
				<script>an2.total_fuel()</script>
			</binding>
		</mod-up>

	</action>
</actions>


</PropertyList>
