<PropertyList>
<name>Gyrocompass GPK-48</name>
   <w-base>256</w-base>
   <h-base>256</h-base>
<layers>
    <layer>
	<name>heading ribbon 1</name>
	<texture>                           
    	    <path>Aircraft/an2/Instruments/Textures/gpk-48_3.rgb</path>
	    <x1>0.0</x1>
	    <y1>0.0</y1>
	    <x2>1.0</x2>
	    <y2>1.0</y2>
	</texture>
	<w>2048</w>
	<h>256</h>
	<transformations>
	    <transformation>
		<type>x-shift</type>
	<property>/an2/instrumentation/gpk-48/indicated-heading-deg</property>
		<scale>5.6777</scale>
	    </transformation>
	    <transformation>
		<type>y-shift</type>
		<offset>-52</offset>		
	    </transformation>
	    <transformation>
		    <type>x-shift</type>
		    <offset>-1034</offset>		
	    </transformation>
	</transformations>
    </layer>

    <layer>
	    <name>heading ribbon 1 with uv light </name>
	    <condition>
		    <property>/an2/controls/switches/uv_light</property>
	    </condition> 
	    <emissive>true</emissive>
	    <texture>                           
		    <path>Aircraft/an2/Instruments/Textures/gpk-48_3_uv.rgb</path>
		    <x1>0.0</x1>
		    <y1>0.0</y1>
		    <x2>1.0</x2>
		    <y2>1.0</y2>
	    </texture>
	    <w>2048</w>
	    <h>256</h>
<transformations>
    <transformation>
    <type>x-shift</type>
    <property>/an2/instrumentation/gpk-48/indicated-heading-deg</property>
    <scale>5.6777</scale>
    </transformation>
    <transformation>
    <type>y-shift</type>
    <offset>36</offset>		
    </transformation>
    <transformation>
	    <type>x-shift</type>
	    <offset>-1034</offset>	
    </transformation>
    
</transformations>
    </layer>



    <layer>
	<name>heading ribbon 2</name>
	<texture>                           
    	    <path>Aircraft/an2/Instruments/Textures/gpk-48_3.rgb</path>
	    <x1>0.0</x1>
	    <y1>0.0</y1>
	    <x2>0.05</x2>
	    <y2>1.0</y2>
	</texture>
	<w>102</w>
	<h>256</h>
	<transformations>
	    <transformation>
		<type>x-shift</type>
	<property>/an2/instrumentation/gpk-48/indicated-heading-deg</property>
		<scale>5.6777</scale>
	    </transformation>
	    <transformation>
		<type>y-shift</type>
		<offset>-52</offset>		
	    </transformation>
	    <transformation>
		    <type>x-shift</type>
		    <offset>38</offset>	
	    </transformation>
	</transformations>
    </layer>

    <layer>
	<name>heading ribbon 3</name>
	<texture>                           
    	    <path>Aircraft/an2/Instruments/Textures/gpk-48_3.rgb</path>
	    <x1>0.95</x1>
	    <y1>0.0</y1>
	    <x2>1.0</x2>
	    <y2>1.0</y2>
	</texture>
	<w>102</w>
	<h>256</h>
	<transformations>
	    <transformation>
		<type>x-shift</type>
		<property>/an2/instrumentation/gpk-48/indicated-heading-deg</property>
		<scale>5.6777</scale>
	    </transformation>
	    <transformation>
		<type>y-shift</type>
		<offset>-52</offset>		
	    </transformation>
	    <transformation>
		    <type>x-shift</type>
		    <offset>-2106</offset>	
	    </transformation>
	</transformations>
    </layer>

    <layer>
	    <name>heading ribbon 2 with uv light</name>
	    <condition>
		    <property>/an2/controls/switches/uv_light</property>
	    </condition> 
	    <emissive>true</emissive>
	    <texture>                           
		    <path>Aircraft/an2/Instruments/Textures/gpk-48_3_uv.rgb</path>
		    <x1>0.0</x1>
		    <y1>0.0</y1>
		    <x2>0.05</x2>
		    <y2>1.0</y2>
	    </texture>
	    <w>102</w>
	    <h>256</h>
	    <transformations>
		    <transformation>
			    <type>x-shift</type>
			    <property>/an2/instrumentation/gpk-48/indicated-heading-deg</property>
			    <scale>5.6777</scale>
		    </transformation>
		    <transformation>
			    <type>y-shift</type>
			    <offset>36</offset>		
		    </transformation>
		    <transformation>
			    <type>x-shift</type>
			    <offset>38</offset>	
		    </transformation>
	    </transformations>
    </layer>
    
    <layer>
	    <name>heading ribbon 3 with uv light</name>
	    <condition>
		    <property>/an2/controls/switches/uv_light</property>
	    </condition> 
	    <emissive>true</emissive>
	    <texture>                           
		    <path>Aircraft/an2/Instruments/Textures/gpk-48_3_uv.rgb</path>
		    <x1>0.95</x1>
		    <y1>0.0</y1>
		    <x2>1.0</x2>
		    <y2>1.0</y2>
	    </texture>
	    <w>102</w>
	    <h>256</h>
	    <transformations>
		    <transformation>
			    <type>x-shift</type>
	<property>/an2/instrumentation/gpk-48/indicated-heading-deg</property>
			    <scale>5.6777</scale>			    
		    </transformation>
		    <transformation>
			    <type>y-shift</type>
			    <offset>36</offset>		
		    </transformation>
		    <transformation>
			    <type>x-shift</type>
			    <offset>-2106</offset>	
		    </transformation>
	    </transformations>
    </layer>

    <layer>
	<name>Arretir label</name>
	<texture>                           
    	    <path>Aircraft/an2/Instruments/Textures/gpk-48_2.rgb</path>
	    <x1>0.0</x1>
	    <y1>0.0</y1>
	    <x2>1.0</x2>
	    <y2>1.0</y2>
	</texture>

	<w>64</w>
	<h>32</h>


	<transformations>
	    <transformation>
		<type>x-shift</type>
		<property>/an2/instrumentation/gpk-48/caged-flag</property>
		<scale>-30</scale>
		<offset>20</offset>	
	    </transformation>
	    <transformation>
		<type>y-shift</type>

		<offset>-30</offset>		
	    </transformation>
	</transformations>
    </layer>

    
    <layer>
	    <name>blanker</name>
	    <texture>                           
		    <path>Aircraft/an2/Instruments/Textures/gpk-48_4.rgb</path>
		    <x1>0.0</x1>
		    <y1>0.0</y1>
		    <x2>1.0</x2>
		    <y2>1.0</y2>
	    </texture>
	    <w>256</w>
	    <h>256</h>
    </layer>

    <layer>
	<name>base</name>
	<texture>                           
    	    <path>Aircraft/an2/Instruments/Textures/gpk-48_1.rgb</path>
	    <x1>0.0</x1>
	    <y1>0.0</y1>
	    <x2>1.0</x2>
	    <y2>1.0</y2>
	</texture>
	<w>256</w>
	<h>256</h>
    </layer>



</layers>

<actions>
    <action>
	<name>Arretir</name>
	<button>0</button>
	<x>-85</x>
	<y>-124</y>
	<w>20</w>
	<h>64</h>
	<binding>
	    <command>nasal</command>
	    <script>an2.gpk_caged()</script>
	</binding>
    </action>
    <action>
	    <name>offset-left</name>
	    <button>0</button>
	    <condition>
		    <property>/an2/instrumentation/gpk-48/caged-flag</property>
	    </condition>
	    <x>-103</x>
	    <y>-124</y>
	    <w>20</w>
	    <h>64</h>
	    <binding>
		    <command>property-adjust</command>
		    <property>/instrumentation/heading-indicator/offset-deg</property>
		    <step>-0.1</step>
	    </binding>
    </action>
    <action>
	    <name>offset-right</name>
	    <button>0</button>
	    <condition>
		    <property>/an2/instrumentation/gpk-48/caged-flag</property>
	    </condition>
	    <x>-65</x>
	    <y>-124</y>
	    <w>20</w>
	    <h>64</h>
	    <binding>
		    <command>property-adjust</command>
		    <property>/instrumentation/heading-indicator/offset-deg</property>
		    <step>0.1</step>
	    </binding>
    </action>


</actions>

</PropertyList>
