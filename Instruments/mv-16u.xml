<?xml version="1.0"?>

<!--
Gauge for AN-2 model
Manifold pressure meter
Yurik V. Nikiforoff, sep 2006
-->

<PropertyList>

 <name>Pressure meter MV-16U</name>
 
   <w-base>256</w-base>
   <h-base>256</h-base>
   
<layers>
    <layer>
         <name>face</name>
	 <texture>   
    	    <path>Aircraft/an2/Instruments/Textures/mv-16u_1.rgb</path>
            <x1>0.0</x1>
	    <y1>0.0</y1>
    	    <x2>1.0</x2>
    	    <y2>1.0</y2>
        </texture>
	<w>256</w>
        <h>256</h>
    </layer>
    <layer>
	    <name>face with uv light</name>
	    <condition>
		    <property>/an2/controls/switches/uv_light</property>
	    </condition> 
	    <emissive>true</emissive>
	    <texture>   
		    <path>Aircraft/an2/Instruments/Textures/mv-16u_1_uv.rgb</path>
		    <x1>0.0</x1>
		    <y1>0.0</y1>
		    <x2>1.0</x2>
		    <y2>1.0</y2>
	    </texture>
	    <w>220</w>
	    <h>220</h>
    </layer>

    <layer>
	<name>needle</name>
	<texture>
    	    <path>Aircraft/an2/Instruments/Textures/mv-16u_2.rgb</path>
	    <x1>0.0</x1>
	    <y1>0.0</y1>
	    <x2>1.0</x2>
	    <y2>1.0</y2>
	</texture>
        <w>32</w>
	<h>128</h>
	<transformations>
		<transformation>
			<type>x-shift</type>
			<offset>-1</offset>
		</transformation>

	    <transformation>
    		<type>rotation</type>
    		<property>/engines/engine/mp-osi</property>
		<min>11.5</min>
		<max>63</max>
		<scale>6.5</scale>
		<offset>168</offset>
	    </transformation>

	    <transformation>
		<type>x-shift</type>
		<offset>3</offset>
	    </transformation>
	    <transformation>
		<type>y-shift</type>
		<offset>18</offset>
	    </transformation>
	</transformations>
    </layer> 
    <layer>
	    <name>needle with uv light</name>
	    <condition>
		    <property>/an2/controls/switches/uv_light</property>
	    </condition> 
	    <emissive>true</emissive>
	    <texture>
		    <path>Aircraft/an2/Instruments/Textures/mv-16u_2_uv.rgb</path>
		    <x1>0.0</x1>
		    <y1>0.0</y1>
		    <x2>1.0</x2>
		    <y2>1.0</y2>
	    </texture>
	    <w>32</w>
	    <h>128</h>
	    <transformations>
		    <transformation>
			    <type>x-shift</type>
			    <offset>-1</offset>
		    </transformation>
		    
		    <transformation>
			    <type>rotation</type>
			    <property>/engines/engine/mp-osi</property>
			    <min>11.5</min>
			    <max>63</max>
			    <scale>6.5</scale>
			    <offset>168</offset>
		    </transformation>
		    
		    <transformation>
			    <type>x-shift</type>
			    <offset>3</offset>
		    </transformation>
		    <transformation>
			    <type>y-shift</type>
			    <offset>18</offset>
		    </transformation>
	    </transformations>
    </layer> 

