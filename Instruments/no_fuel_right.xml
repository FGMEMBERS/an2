<?xml version="1.0"?>

<!--
Gauge for AN-2 model
Left tank fuel limit lamp
Yurik V. Nikiforoff, aug 2006
-->

<PropertyList>

 <name>Right tank fuel limit lamp</name>
 
   <w-base>64</w-base>
   <h-base>64</h-base>
   
<layers>
    <layer>
         <name>off</name>
	 <texture>   
    	    <path>Aircraft/an2/Instruments/Textures/no_fuel_off.rgb</path>
            <x1>0.0</x1>
	    <y1>0.0</y1>
    	    <x2>1.0</x2>
    	    <y2>1.0</y2>
        </texture>
	<w>64</w>
        <h>64</h>
    </layer>
    <layer>
	    <name>on</name>
	    <emissive>true</emissive>
	    <condition>
		<and>
		    <property>/an2/instrumentation/sbess/serviceable</property>
		    <less-than>
		    	<property>/consumables/fuel/tank[2]/level-gal_us</property>
		    	<value>13.21</value> <!--50 l = 13.21 gal-->
	    	    </less-than>
	        </and>
	    </condition>
	    <texture>   
		    <path>Aircraft/an2/Instruments/Textures/no_fuel_on.rgb</path>
		    <x1>0.0</x1>
		    <y1>0.0</y1>
		    <x2>1.0</x2>
		    <y2>1.0</y2>
	    </texture>
	    <w>64</w>
	    <h>64</h>
    </layer>

</layers>
</PropertyList>
