<PropertyList>

 <name>Propeller handle</name>
 
   <w-base>256</w-base>
   <h-base>256</h-base>
   
<layers>

    <layer>
	<name>Propeller handle</name>
	<texture>                           
    	    <path>Aircraft/an2/Instruments/Textures/prop_handl.rgb</path>
	    <x1>0.0</x1>
	    <y1>0.0</y1>
	    <x2>1.0</x2>
	    <y2>1.0</y2>
	</texture>
	<w>128</w>
	<h>64</h>
	<transformations>

	    <transformation>
		<type>y-shift</type>
		<scale>-100</scale>
		<property>/controls/engines/engine/propeller-pitch</property>
		<offset>100</offset>		
	    </transformation>
	    
	</transformations>
    </layer>

</layers>

<actions>

<!-- Set full propeller pitch -->
    <action>
        <name>full prop pitch </name>
	<button>0</button>
        <x>-60</x>
	<y>50</y>
	<w>120</w>
	<h>60</h>
	<binding>
	    <command>property-assign</command>
	    <property>/controls/engines/engine/propeller-pitch</property>
    	    <value>0.1</value>
	</binding>
    </action>


<!-- half pitch -->
    <action>
        <name>half prop pitch </name>
	<button>0</button>
        <x>-60</x>
	<y>-20</y>
	<w>120</w>
	<h>60</h>
	<binding>
	    <command>property-assign</command>
	    <property>/controls/engines/engine/propeller-pitch</property>
    	    <value>1.0</value>
	</binding>
    </action>



</actions>

</PropertyList>
