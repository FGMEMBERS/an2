<?xml version="1.0"?>

<!--
Gauge for AN-2 model
Radio Altimeter
Yurik V. Nikiforoff, aug 2006
-->

<PropertyList>

 <name>Radio Altimeter RV-UM</name>
 
   <w-base>256</w-base>
   <h-base>256</h-base>
   
<layers>
    <layer>
         <name>face</name>
	 <texture>   
    	    <path>Aircraft/an2/Instruments/Textures/rv-um_1.rgb</path>
            <x1>0.0</x1>
	    <y1>0.0</y1>
    	    <x2>1.0</x2>
    	    <y2>1.0</y2>
        </texture>
	<w>256</w>
        <h>256</h>
    </layer>
    <layer>
	    <name>face with uv light</name>
	    <condition>
		    <property>/an2/controls/switches/uv_light</property>
	    </condition> 
	    <emissive>true</emissive>
	    <texture>   
		    <path>Aircraft/an2/Instruments/Textures/rv-um_1_uv.rgb</path>
		    <x1>0.0</x1>
		    <y1>0.0</y1>
		    <x2>1.0</x2>
		    <y2>1.0</y2>
	    </texture>
	    <w>237</w>
	    <h>237</h>
    </layer>

    <layer>
	<name>needle</name>
	<texture>
    	    <path>Aircraft/an2/Instruments/Textures/rv-um_2.rgb</path>
	    <x1>0.0</x1>
	    <y1>0.0</y1>
	    <x2>0.5</x2>
	    <y2>1.0</y2>
	</texture>
        <w>30</w>
	<h>100</h>
	<transformations>
	    <transformation>
		<type>rotation</type>
		<offset>-115</offset>	
	    </transformation>

		<!--Abs altitude-->
	    <transformation>
    		<type>rotation</type>
		<property>/an2/instrumentation/rv-um/rv-altitude-m</property>
		<min>0</min>
		<max>700</max>
    		<scale>1</scale>		
		<interpolation>
			<entry><ind>	0</ind><dep>	0</dep></entry>
			<entry><ind>	20</ind><dep>	45</dep></entry>
			<entry><ind>	40</ind><dep>	75</dep></entry>
			<entry><ind>	60</ind><dep>	98</dep></entry>
			<entry><ind>	80</ind><dep>	117</dep></entry>
			<entry><ind>	100</ind><dep>	132</dep></entry>
			<entry><ind>	200</ind><dep>	175</dep></entry>
			<entry><ind>	300</ind><dep>	200</dep></entry>
			<entry><ind>	400</ind><dep>	215</dep></entry>
			<entry><ind>	600</ind><dep>	238</dep></entry>
			<entry><ind>	700</ind><dep>	250</dep></entry>
		</interpolation>
	    </transformation>
	    <transformation>
		<type>x-shift</type>
		<offset>7</offset>
	    </transformation>
	    <transformation>
		<type>y-shift</type>
		<offset>40</offset>
	    </transformation>
	</transformations>
    </layer> 
    
    <layer>
	    <name>needle with uv light</name>
	    <condition>
		    <property>/an2/controls/switches/uv_light</property>
	    </condition> 
	    <emissive>true</emissive>
	    <texture>
		    <path>Aircraft/an2/Instruments/Textures/rv-um_2.rgb</path>
		    <x1>0.5</x1>
		    <y1>0.0</y1>
		    <x2>1.0</x2>
		    <y2>1.0</y2>
	    </texture>
	    <w>33</w>
	    <h>100</h>
	    <transformations>
		    
		    <transformation>
			    <type>rotation</type>
			    <offset>-115</offset>	
		    </transformation>
		    
		    <!--Abs altitude-->
		    <transformation>
			    <type>rotation</type>
			    <property>/an2/instrumentation/rv-um/rv-altitude-m</property>
			    <min>0</min>
			    <max>700</max>
			    <scale>1</scale>		
			    <interpolation>
				    <entry><ind>	0</ind><dep>	0</dep></entry>
				    <entry><ind>	20</ind><dep>	45</dep></entry>
				    <entry><ind>	40</ind><dep>	75</dep></entry>
				    <entry><ind>	60</ind><dep>	98</dep></entry>
				    <entry><ind>	80</ind><dep>	117</dep></entry>
				    <entry><ind>	100</ind><dep>	132</dep></entry>
				    <entry><ind>	200</ind><dep>	175</dep></entry>
				    <entry><ind>	300</ind><dep>	200</dep></entry>
				    <entry><ind>	400</ind><dep>	215</dep></entry>
				    <entry><ind>	600</ind><dep>	238</dep></entry>
				    <entry><ind>	700</ind><dep>	250</dep></entry>
			    </interpolation>
		    </transformation>
		    <transformation>
			    <type>x-shift</type>
			    <offset>-8</offset>
		    </transformation>
		    <transformation>
			    <type>y-shift</type>
			    <offset>40</offset>
		    </transformation>
	    </transformations>
    </layer> 
    <layer>
	    <name>Black ring</name>
	    <texture>   
		    <path>Aircraft/an2/Instruments/Textures/rv-um_3.rgb</path>
		    <x1>0.0</x1>
		    <y1>0.0</y1>
		    <x2>1.0</x2>
		    <y2>1.0</y2>
	    </texture>
	    <w>80</w>
	    <h>80</h>
    </layer>

</layers>
</PropertyList>
