<?xml version="1.0"?>

<!--
Yurik V. Nikiforoff, aug 2006
Lamp
-->

<PropertyList>

 <name>Red lamp</name>
 
   <w-base>64</w-base>
   <h-base>64</h-base>
   
<layers>
    <layer>
	<name>red lamp on</name>
        <condition>
		<property>/an2/instrumentation/rv-um/lamp</property>
	</condition>                        
	<texture>                           
    	    <path>Aircraft/an2/Instruments/Textures/red_lamp_on.rgb</path>
	    <x1>0.0</x1>
	    <y1>0.0</y1>
	    <x2>1.0</x2>
	    <y2>1.0</y2>
	</texture>
	<emissive>true</emissive>
	<w>64</w>
	<h>64</h>
    </layer>

    <layer>
	<name>red lamp off</name>
        <condition>
		<not>
			<property>/an2/instrumentation/rv-um/lamp</property>
		</not>
	</condition>                        
	<texture>                           
    	    <path>Aircraft/an2/Instruments/Textures/red_lamp_off.rgb</path>
	    <x1>0.0</x1>
	    <y1>0.0</y1>
	    <x2>1.0</x2>
	    <y2>1.0</y2>
	</texture>
	<w>64</w>
	<h>64</h>
    </layer>
</layers>
</PropertyList>
