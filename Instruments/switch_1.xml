<PropertyList>

 <name>switch 1</name>
 
   <w-base>64</w-base>
   <h-base>64</h-base>
   
<layers>
	
	<layer>
		<name>switch pos 1</name>
		<condition>
			<equals>
				<property>/an2/controls/switches/zaslonk</property>
				<value>1</value>
			</equals>
		</condition>                        
		<texture>                           
			<path>Aircraft/an2/Instruments/Textures/switch_1_3.rgb</path>
			<x1>0.0</x1>
			<y1>0.0</y1>
			<x2>1.0</x2>
			<y2>1.0</y2>
		</texture>
		<w>43</w>
		<h>43</h>
		<transformations>
			<transformation>
				<type>x-shift</type>
				<offset>9</offset>
			</transformation>
			<transformation>
				<type>y-shift</type>
				<offset>9</offset>
			</transformation>
		</transformations>
	</layer>

    <layer>
	<name>switch pos 2</name>
        <condition>
	    <equals>
	    <property>/an2/controls/switches/zaslonk</property>
	    <value>2</value>
    	    </equals>
	</condition>                        
	<texture>                           
    	    <path>Aircraft/an2/Instruments/Textures/switch_1_1.rgb</path>
	    <x1>0.0</x1>
	    <y1>0.0</y1>
	    <x2>1.0</x2>
	    <y2>1.0</y2>
	</texture>
	<w>25</w>
	<h>25</h>
    </layer>

    <layer>
	<name>switch pos 0</name>
        <condition>
		<equals>
			<property>/an2/controls/switches/zaslonk</property>
			<value>0</value>
		</equals>
	</condition>                        
	<texture>                           
    	    <path>Aircraft/an2/Instruments/Textures/switch_1_2.rgb</path>
	    <x1>0.0</x1>
	    <y1>0.0</y1>
	    <x2>1.0</x2>
	    <y2>1.0</y2>
	</texture>
	<w>35</w>
	<h>35</h>
	<transformations>
	    <transformation>
		<type>x-shift</type>
		<offset>5</offset>
    	    </transformation>
    	    <transformation>
		<type>y-shift</type>
		<offset>5</offset>
	    </transformation>
	</transformations>
    </layer>



</layers>

<actions>
<action>
    <name>swtich pos 1</name>
    <button>0</button>
    <x>-16</x>
    <y>12</y>
    <w>30</w>
    <h>20</h>
    <binding>
	    <command>property-assign</command>
	    <property>/an2/controls/switches/zaslonk</property>
	    <value>1</value>
    </binding>
    <binding>
	    <command>nasal</command>
	    <script>controls.elevatorTrim(1)</script>
    </binding>
    <mod-up>
	    <binding>
		    <command>property-assign</command>
		    <property>/an2/controls/switches/zaslonk</property>
		    <value>0</value>
	    </binding>
    </mod-up>

</action>

<action>
	<name>swtich pos 2</name>
	<button>0</button>
	<x>-16</x>
	<y>-12</y>
	<w>30</w>
	<h>20</h>
	<binding>
		<command>property-assign</command>
		<property>/an2/controls/switches/zaslonk</property>
		<value>2</value>
	</binding>
	<binding>
		<command>nasal</command>
		<script>controls.elevatorTrim(-1)</script>
	</binding>

	<mod-up>
		<binding>
			<command>property-assign</command>
			<property>/an2/controls/switches/zaslonk</property>
			<value>0</value>
		</binding>
	</mod-up>
</action>

</actions>

</PropertyList>
