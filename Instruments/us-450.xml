<?xml version="1.0"?>

<!--
Gauge for AN-2 model
Air spidometer US-450
Yurik V. Nikiforoff, aug 2006
-->

<PropertyList>

   <name>Spidometer US-450</name>
   <w-base>256</w-base>
   <h-base>256</h-base>
   
<layers>
    <layer>
         <name>face</name>
	 <texture>   
    	    <path>Aircraft/an2/Instruments/Textures/us-450_1.rgb</path>
            <x1>0.0</x1>
	    <y1>0.0</y1>
    	    <x2>1.0</x2>
    	    <y2>1.0</y2>
        </texture>
	<w>256</w>
        <h>256</h>
    </layer>
    <layer>
	    <name>face with uv light</name>
	    <condition>
		    <property>/an2/controls/switches/uv_light</property>
	    </condition> 
	    <emissive>true</emissive>
	    <texture>   
		    <path>Aircraft/an2/Instruments/Textures/us-450_1_uv.rgb</path>
		    <x1>0.0</x1>
		    <y1>0.0</y1>
		    <x2>1.0</x2>
		    <y2>1.0</y2>
	    </texture>
	    <w>225</w>
	    <h>225</h>
	    <transformations>
	          <transformation>
		    <type>x-shift</type>
		    <offset>3</offset>
	          </transformation>
	    </transformations>
    </layer>

    <layer>
	<name>needle</name>
	<texture>
    	    <path>Aircraft/an2/Instruments/Textures/us-450_2.rgb</path>
	    <x1>0.0</x1>
	    <y1>0.0</y1>
	    <x2>1.0</x2>
	    <y2>1.0</y2>
	</texture>
        <w>30</w>
	<h>240</h>
	<transformations>

	    <transformation>
		<type>rotation</type>
		<!--<scale>180</scale>-->
		<property>/an2/instrumentation/us-450/indicated-speed-kmh</property>
		<min>0</min>
		<max>450</max>
		<wrap>true</wrap>
		<!--<offset>350</offset>	-->
		<interpolation>
			<entry><ind>	0</ind><dep>	0</dep></entry>
			<entry><ind>	50</ind><dep>	7</dep></entry>
			<entry><ind>	60</ind><dep>	11</dep></entry>
			<entry><ind>	70</ind><dep>	15</dep></entry>
			<entry><ind>	80</ind><dep>	19</dep></entry>
			<entry><ind>	90</ind><dep>	24</dep></entry>
			<entry><ind>	100</ind><dep>	30</dep></entry>
			<entry><ind>	150</ind><dep>	72</dep></entry>
			<entry><ind>	450</ind><dep>	350</dep></entry>
		</interpolation>			
	</transformation>


<!--	    <transformation>
    		<type>rotation</type>
    		<property>/systems/electrical/amps</property>
    		<scale>0.6</scale>
		<offset>-103</offset>
	    </transformation>-->

	    <transformation>
		<type>x-shift</type>
		<offset>0</offset>
	    </transformation>
	    <transformation>
		<type>y-shift</type>
		<offset>-10</offset>
	    </transformation>
	</transformations>
    </layer> 
    
    <layer>
	    <name>needle with uv light</name>
	    <condition>
		    <property>/an2/controls/switches/uv_light</property>
	    </condition> 
	    <emissive>true</emissive>
	    <texture>
		    <path>Aircraft/an2/Instruments/Textures/us-450_2_uv.rgb</path>
		    <x1>0.0</x1>
		    <y1>0.0</y1>
		    <x2>1.0</x2>
		    <y2>1.0</y2>
	    </texture>
	    <w>30</w>
	    <h>240</h>
	    <transformations>
		    
		    <transformation>
			    <type>rotation</type>
		    <property>/an2/instrumentation/us-450/indicated-speed-kmh</property>
			    <min>0</min>
			    <max>450</max>
			    <wrap>true</wrap>
			    <!--<offset>350</offset>	-->
			    <interpolation>
				    <entry><ind>	0</ind><dep>	0</dep></entry>
				    <entry><ind>	50</ind><dep>	7</dep></entry>
				    <entry><ind>	60</ind><dep>	11</dep></entry>
				    <entry><ind>	70</ind><dep>	15</dep></entry>
				    <entry><ind>	80</ind><dep>	19</dep></entry>
				    <entry><ind>	90</ind><dep>	24</dep></entry>
				    <entry><ind>	100</ind><dep>	30</dep></entry>
				    <entry><ind>	150</ind><dep>	72</dep></entry>
				    <entry><ind>	450</ind><dep>	350</dep></entry>
			    </interpolation>		
			    
			    
		    </transformation>
		    
		    <transformation>
			    <type>x-shift</type>
			    <offset>0</offset>
		    </transformation>
		    <transformation>
			    <type>y-shift</type>
			    <offset>-10</offset>
		    </transformation>
	    </transformations>
    </layer> 
