	</interpolation>
	<axis>
		<x>0</x>
		<y>0.25</y>
		<z>1</z>
	</axis>
</animation>
<!-- 
     Wheel diameter about 0.9 m
     factor(rpm) = (V(kt)*60)/(d*Pi) = V(kt)*21.22
-->
<!-- left wheel -->
<animation>
	<type>spin</type>
	<object-name>obj73</object-name>
	<property>/velocities/airspeed-kt</property>
	<factor>-21.22</factor>
	<condition>
		<property>/gear/gear/compression-norm</property>
	</condition>
	<center>
		<x-m>-3.43</x-m>
		<y-m>-1.96</y-m>
		<z-m>-2.76</z-m>
	</center>
	<axis>
		<x>0</x>
		<y>1</y>
		<z>-0.09</z>
