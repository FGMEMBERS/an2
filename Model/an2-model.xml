	<object-name>left_gear</object-name>
	<property>/gear/gear/compression-norm</property>
	<interpolation>
		<entry><ind>	0</ind><dep>	0</dep></entry>
		<entry><ind>	0.2</ind><dep>	0.1</dep></entry>
