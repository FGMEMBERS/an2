<PropertyList>

 <path>an2_r.ac</path>

 <offsets>
  <z-m>0.8</z-m>
  <x-m>6.2</x-m>
  <pitch-deg>0</pitch-deg>
 </offsets>

 <!-- Save fps - exclude complicate objects from shadowing -->
<animation>
  <type>noshadow</type>
    <object-name>noshadow_plane</object-name>
</animation>

<!-- Make shadow from spescial (simply) object-->
<animation>
  <type>material</type>
    <object-name>shadow_plane</object-name>
    <transparency>
	<alpha-prop>transparency/alpha</alpha-prop>
    <offset>0.0</offset>
    </transparency>
</animation>

<!--Propeller-->
<animation>
	<type>select</type>
	<object-name>obj71</object-name>
	<condition>
		<less-than>
			<property>/engines/engine/rpm</property>
			<value>600</value>
		</less-than>
	</condition>
</animation>

<animation>
	<type>select</type>
	<object-name>obj83</object-name>
	<condition>
		<greater-than>
			<property>/engines/engine/rpm</property>
			<value>600</value>
		</greater-than>
	</condition>
</animation>



<animation>
	
	<type>spin</type>
	<object-name>obj71</object-name>
	<property>/engines/engine/rpm</property>
	
	<center>
		<x-m>0</x-m>
		<y-m>0</y-m>
		<z-m>-0.65</z-m>
	</center>
	<axis>
		<x>1.0</x>
		<y>0.0</y>
		<z>0.0</z>
 	</axis>	    
</animation>

<animation>
	
	<type>spin</type>
	<object-name>obj70</object-name>
	<property>/engines/engine/rpm</property>
	
	<center>
		<x-m>0</x-m>
		<y-m>0</y-m>
		<z-m>-0.65</z-m>
	</center>
	<axis>
		<x>1.0</x>
		<y>0.0</y>
		<z>0.0</z>
	</axis>	    
</animation>

<animation>
	
	<type>spin</type>
	<object-name>obj83</object-name>
	<property>/engines/engine/rpm</property>
	<factor>0.005</factor>
	<center>
		<x-m>0</x-m>
		<y-m>0</y-m>
		<z-m>-0.65</z-m>
	</center>
	<axis>
		<x>1.0</x>
		<y>0.0</y>
		<z>0.0</z>
	</axis>	    
</animation>

<animation>
	<type>material</type>
	<object-name>obj83</object-name>
	<transparency>
		<alpha-prop>transparency/alpha</alpha-prop>
		<offset>0.1</offset>
	</transparency>
</animation>

<!--Surface-->
<animation>
	<type>rotate</type>
	<object-name>rudder</object-name>
	<property>/controls/flight/rudder</property>
	<factor>-28</factor>
	<axis>
		<x1-m>5.52</x1-m>
		<y1-m>0</y1-m>
		<z1-m>3.16</z1-m>
		
		
		<x2-m>5.90</x2-m>
		<y2-m>0</y2-m>
		<z2-m>-0.39</z2-m>
	</axis>
</animation>

<!-- tail wheel -->
<animation>
	<type>rotate</type>
	<object-name>rear_wheel</object-name>
	<property>/controls/flight/rudder</property>
	<factor>-28</factor>
	<axis>
		<x1-m>4.60</x1-m>
		<y1-m>0</y1-m>
		<z1-m>-0.99</z1-m>
		
		
		<x2-m>4.72</x2-m>
		<y2-m>0</y2-m>
		<z2-m>-1.28</z2-m>
	</axis>
</animation>

<!-- elevator -->
<animation>
	<type>rotate</type>
	<object-name>obj75</object-name>
	<object-name>elev_trim_left</object-name>
	<object-name>elev_trim_right</object-name>
	<property>/controls/flight/elevator</property>
	<interpolation>
		<entry><ind>	-1</ind><dep>	-42</dep></entry>
		<entry><ind>	0</ind><dep>	0</dep></entry>
		<entry><ind>	1</ind><dep>	22</dep></entry>
	</interpolation>
	
	<axis>
		<x1-m>5.34</x1-m>
		<y1-m>-3.52</y1-m>
		<z1-m>1.12</z1-m>
		
		
		<x2-m>5.34</x2-m>
		<y2-m>3.52</y2-m>
		<z2-m>1.12</z2-m>
	</axis>
</animation>

<!-- left aileron -->
<animation>
	<type>rotate</type>
	<object-name>obj79</object-name>
	<property>/controls/flight/aileron</property>
	<interpolation>
		<entry><ind>	-1</ind><dep>	-14</dep></entry>
		<entry><ind>	0</ind><dep>	0</dep></entry>
		<entry><ind>	1</ind><dep>	30</dep></entry>
	</interpolation>
	<axis>
		<x1-m>-1.33</x1-m>
		<y1-m>9.30</y1-m>
		<z1-m>1.26</z1-m>
		
		
		<x2-m>-1.33</x2-m>
		<y2-m>4.50</y2-m>
		<z2-m>1.26</z2-m>
	</axis>
</animation>

<!-- right aileron -->
<animation>
	<type>rotate</type>
	<object-name>obj76</object-name>
	<property>/controls/flight/aileron</property>
	<interpolation>
		<entry><ind>	-1</ind><dep>	-30</dep></entry>
		<entry><ind>	0</ind><dep>	0</dep></entry>
		<entry><ind>	1</ind><dep>	14</dep></entry>
	</interpolation>
	<axis>
		<x1-m>-1.33</x1-m>
		<y1-m>-9.30</y1-m>
		<z1-m>1.26</z1-m>
		
		
		<x2-m>-1.33</x2-m>
		<y2-m>-4.50</y2-m>
		<z2-m>1.26</z2-m>
	</axis>
</animation>

