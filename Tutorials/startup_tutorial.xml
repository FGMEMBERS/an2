<PropertyList>
	<name>Engine Start</name>
	<description>This tutorial teaches the An-2 engine start procedure</description>
	<interval>0</interval>

	<init>					
		<set>
			<property>/sim/current-view/view-number</property>
			<value>0</value>
		</set>
		<set>
			<property>/controls/gear/brake-parking</property>
			<value>1</value>
		</set>
		<set>
			<property>/controls/flight/flaps</property>
			<value>0.0</value>
		</set>
                <view>
                  <heading-offset-deg>345</heading-offset-deg>
                  <pitch-offset-deg>-25</pitch-offset-deg>
                  <field-of-view>47</field-of-view>
                </view>

	</init>

	<step>
		<message>
			Turn on main battery switch
		</message>
		<marker>
                  <x-m>-4.5</x-m>
                  <y-m>-0.126</y-m>
                  <z-m>0.08</z-m>
		<scale>1.5</scale>
		</marker>
		<exit>
			<condition>
                          <property>/an2/controls/switches/battery_switch</property>
			</condition>
		</exit>
	</step>

	<step>
		<message>
			Set fuel selector to up position (use both fuel tank)
		</message>
		<marker>
                  <x-m>-4.34</x-m>
                  <y-m>0.07</y-m>
                  <z-m>-0.19</z-m>
		<scale>1.5</scale>
		</marker>
		<exit>
			<condition>
                          <equals>
                          <property>/an2/instrumentation/fuel-select/position</property>
                          <value>2</value>
                        </equals>
                        </condition>
		</exit>
	</step>
        <step>
          <message>
            Set magneto selector to 1+2 position
          </message>
          <marker>
            <x-m>-4.5</x-m>
            <y-m>-0.305</y-m>
            <z-m>0.1</z-m>
            <scale>1.5</scale>
          </marker>
          <exit>
            <condition>
              <equals>
                <property>/controls/engines/engine/magnetos</property>
                <value>3</value>
              </equals>
            </condition>
          </exit>
        </step>
        <step>
          <message>
            Turn on main starter switch
          </message>
          <marker>
            <x-m>-4.5</x-m>
            <y-m>-0.369</y-m>
            <z-m>0.10</z-m>
            <scale>1.5</scale>
          </marker>
          <exit>
            <condition>
                <property>/an2/controls/switches/starter_switch</property>
            </condition>
          </exit>
        </step>
        <step>
          <message>
            Spinup inertial starter
            Set starter selector to left position and hold it 
            until flywheel will spinup
          </message>
          <marker>
            <x-m>-4.5</x-m>
            <y-m>-0.208</y-m>
            <z-m>0.10</z-m>
            <scale>1.5</scale>
          </marker>
          <exit>
            <condition>
              <greater-than>
                <property>/an2/instrumentation/starter/spin</property>
                <value>0.8</value>
              </greater-than>
            </condition>
          </exit>
        </step>
        <step>
          <message>
            Set starter selector to right position and hold it 
            until engine will started
          </message>
          <marker>
            <x-m>-4.5</x-m>
            <y-m>-0.208</y-m>
            <z-m>0.10</z-m>
            <scale>1.5</scale>
          </marker>
          <exit>
            <condition>
                <property>/engines/engine/running</property>
            </condition>
          </exit>
        </step>
        <step>
          <message>
            Turn off main starter switch
          </message>
          <marker>
            <x-m>-4.5</x-m>
            <y-m>-0.369</y-m>
            <z-m>0.10</z-m>
            <scale>1.5</scale>
          </marker>
          <exit>
            <condition>
              <not>
              <property>/an2/controls/switches/starter_switch</property>
            </not>
            </condition>
          </exit>
        </step>

        <step>
          <message>
            Turn on generator
          </message>
          <marker>
            	<x-m>-4.5</x-m>
            	<y-m>-0.147</y-m>
            	<z-m>0.08</z-m>
		<scale>1.5</scale>
          </marker>
          <exit>
            <condition>
                <property>/an2/controls/switches/generator</property>
            </condition>
          </exit>
        </step>
        <step>
          <message>
            Turn on PO-500 alternator
          </message>
          <marker>
            <x-m>-4.5</x-m>
            <y-m>-0.042</y-m>
            <z-m>-0.069</z-m>
            <scale>1.5</scale>
          </marker>
          <exit>
            <condition>
              <property>/an2/controls/switches/po_500_switch</property>
            </condition>
          </exit>
        </step>
        <step>
          <message>
            Turn on: pitot heat switch
          </message>
          <marker>
            <x-m>-4.512</x-m>
            <y-m>-0.123</y-m>
            <z-m>0.142</z-m>
            <scale>1.5</scale>
          </marker>
          <exit>
            <condition>
              <property>/an2/controls/switches/pvd_switch</property>
            </condition>
          </exit>
        </step>
        <step>
          <message>
            COM radio switch
          </message>
          <marker>
            <x-m>-4.512</x-m>
            <y-m>-0.08233</y-m>
            <z-m>0.142</z-m>
            <scale>1.5</scale>
          </marker>
          <exit>
            <condition>
              <property>/an2/controls/switches/ukv_switch</property>
            </condition>
          </exit>
        </step>
        <step>
          <message>
            ADF radio switch
          </message>
          <marker>
            <x-m>-4.512</x-m>
            <y-m>-0.063</y-m>
    	    <z-m>0.142</z-m>
            <scale>1.5</scale>
          </marker>
          <exit>
            <condition>
              <property>/an2/controls/switches/arp_switch</property>
            </condition>
          </exit>
        </step>
        <step>
          <message>
            Marker beacon switch
          </message>
          <marker>
            <x-m>-4.512</x-m>
            <y-m>-0.042</y-m>
            <z-m>0.142</z-m>
            <scale>1.5</scale>
          </marker>
          <exit>
            <condition>
              <property>/an2/controls/switches/mrv_switch</property>
            </condition>
          </exit>
        </step>
        <step>
          <message>
            Radio altimeter RV-UM main switch
          </message>
          <marker>
            <x-m>-4.512</x-m>
            <y-m>-0.0205</y-m>
    	    <z-m>0.142</z-m>
    	    <scale>1.5</scale>
          </marker>
          <exit>
            <condition>
              <property>/an2/controls/switches/rv_switch</property>
            </condition>
          </exit>
        </step>
        <step>
          <message>
            Audio alarm switch
          </message>
          <marker>
            <x-m>-4.512</x-m>
            <y-m>0.006</y-m>
            <z-m>0.142</z-m>
            <scale>1.5</scale>
          </marker>
          <exit>
            <condition>
              <property>/an2/controls/switches/alarm_switch</property>
            </condition>
          </exit>
        </step>
        <step>
          <message>
            GIK-1 alternator switch
          </message>
          <marker>
            <x-m>-4.512</x-m>
            <y-m>0.0265</y-m>
            <z-m>0.142</z-m>
            <scale>1.5</scale>
          </marker>
          <exit>
            <condition>
              <property>/an2/controls/switches/gik_switch</property>
            </condition>
          </exit>
        </step>
        <step>
          <message>
            AGK-47B alternator switch
          </message>
          <marker>
            <x-m>-4.512</x-m>
            <y-m>0.047</y-m>
            <z-m>0.142</z-m>
            <scale>1.5</scale>
          </marker>
          <exit>
            <condition>
              <property>/an2/controls/switches/agk_switch</property>
            </condition>
          </exit>
        </step>
        <step>
          <message>
            Fuel meter SBESS-1447 switch
          </message>
          <marker>
            <x-m>-4.512</x-m>
            <y-m>0.0675</y-m>
            <z-m>0.142</z-m>
            <scale>1.5</scale>
          </marker>
          <exit>
            <condition>
              <property>/an2/controls/switches/sbess_switch</property>
            </condition>
          </exit>
        </step>        
        <step>
          <message>
            EMI-3K gauge switch
          </message>
          <marker>
            <x-m>-4.512</x-m>
            <y-m>0.088</y-m>
            <z-m>0.142</z-m>
           <scale>1.5</scale>
          </marker>
          <exit>
            <condition>
              <property>/an2/controls/switches/emi_switch</property>
            </condition>
          </exit>
        </step>        
        <step>
          <message>
            Flaps gauge switch
          </message>
          <marker>
            <x-m>-4.512</x-m>
            <y-m>0.1085</y-m>
            <z-m>0.142</z-m>
           <scale>1.5</scale>
          </marker>
          <exit>
            <condition>
              <property>/an2/controls/switches/flaps_power_switch</property>
            </condition>
          </exit>
        </step>        
        <step>
          <message>
            Termometers TUE-48 switch
          </message>
          <marker>
            <x-m>-4.512</x-m>
            <y-m>0.129</y-m>
            <z-m>0.142</z-m>
            <scale>1.5</scale>
          </marker>
          <exit>
            <condition>
              <property>/an2/controls/switches/temp_switch</property>
            </condition>
          </exit>
        </step>        
        <step>
          <message>
            Set warning altitude (50 m) of RV-UM radio altimeter
          </message>
          <marker>
            <x-m>-4.34</x-m>
            <y-m>-0.07</y-m>
            <z-m>-0.198</z-m>
            <scale>1.5</scale>
          </marker>
          <exit>
            <condition>
              <greater-than>
                <property>/an2/instrumentation/rv-um/control</property>
              	<value>1</value>
              </greater-than>
            </condition>
          </exit>
        </step>     
        <step>
          <message>
            Push GIK button and hold until compass rotation has gone
          </message>
          <marker>
            <x-m>-4.49</x-m>
            <y-m>-0.465</y-m>
            <z-m>-0.16</z-m>
            <scale>1.5</scale>
          </marker>
          <exit>
            <condition>
              <less-than>
                <property>/an2/instrumentation/gik/offset</property>
                <value>1</value>
              </less-than>
            </condition>
          </exit>
        </step>
      <step>
          <message>
            Adjust GIK to desired heading
          </message>
          <marker>
            <x-m>-4.45</x-m>
            <y-m>-0.418</y-m>
            <z-m>-0.21</z-m>
            <scale>1.5</scale>
          </marker>
        </step>
        <step>
          <message>
            Set barometric  altimeter to zero
          </message>
          <marker>
            <x-m>-4.45</x-m>
            <y-m>-0.69</y-m>
            <z-m>-0.19</z-m>
            <scale>1.0</scale>
          </marker>
        </step>        
        <step>
          <message>
            Un-cage gyrocompass GPK-48
          </message>
          <marker>
            <x-m>-4.45</x-m>
            <y-m>-0.395</y-m>
            <z-m>-0.023</z-m>
            <scale>0.7</scale>
          </marker>
          <exit>
            <condition>
              <not>
                <property>/an2/instrumentation/gpk-48/caged-flag</property>
              </not>
            </condition>
          </exit>
        </step>

        <step>
          <message>
            Un-cage attitude idicator AGK-47b
          </message>
          <marker>
            <x-m>-4.45</x-m>
            <y-m>-0.42</y-m>
            <z-m>-0.02</z-m>
            <scale>1.0</scale>
          </marker>
          <exit>
            <condition>
            <not>
                <property>/instrumentation/attitude-indicator/caged-flag</property>
            </not>
            </condition>
          </exit>
        </step>

        
        
        
        
</PropertyList>
