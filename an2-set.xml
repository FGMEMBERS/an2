<PropertyList>

 <sim>
	 <description>Legendary Russian AN-2</description>
	 <author>Anton Nikolaev aka Xomer - original model for MSFS</author>
	 <author>Yurik V. Nikiforoff aka Yurik_nsk - port to FlightGear</author>
	 <status>early-production</status>
<help>
<title>An-2</title>
<line> 2D panel only</line>
<line>________________________Procedures_________________________</line>
<line>Preferred Takeoff: nominal, manifold pressure 900 mmHg, rotate at 110 km/h </line>
<line>Extremal takeoff: flaps to 20', full throttle up to 5 min</line>
<line>Climbout: no flaps, pressure 900 mmHg, 140 km/h</line>
<line>Cruise: pressure 615-745 mmHg, speed up to 225 km/h</line>
<line>Landing: 30' flaps, 90 km/h. </line>

</help>

<model>
<path>Aircraft/an2/Model/an2-model.xml</path>
</model>

  <flight-model>jsb</flight-model>
  <aero>an2</aero>


  <!-- Use a 2D instrument panel -->

  <panel>
   <path>Aircraft/an2/Panels/ruspanel.xml</path>
   <visibility archive="y">true</visibility>
  </panel>
  
  <flaps>
	  <setting>0.0</setting>
	  <setting>0.25</setting>
	  <setting>0.5</setting>
	  <setting>0.75</setting>
	  <setting>1.0</setting>
  </flaps>

  <virtual-cockpit archive="y">false</virtual-cockpit>
  <allow-toggle-cockpit archive="y">false</allow-toggle-cockpit>


  <!-- Look down a bit over the top of the panel -->

  <view>
   <internal archive="y">false</internal>
   <config>
     <pitch-offset-deg>-8</pitch-offset-deg>
   </config>
  </view>
  <sound>
   <path archive="y">Aircraft/an2/an2-sound.xml</path>
  </sound>
  <!--Light source subsystem-->
  <light>
	  <light-source>
		  <name>Landing</name>	
		  <switch-prop>/controls/switches/landing-light</switch-prop>
		  <!--Position-->
		  <center-x>2.0</center-x>
		  <center-y>0.0</center-y>
		  <center-z>-0.5</center-z>
		  <!--Direction-->
		  <axis-x>-1.0</axis-x>
		  <axis-y>0.0</axis-y>
		  <axis-z>-0.1</axis-z>
		  <!--Frustum parameters-->
		  <cutoff>20.0</cutoff>
		  <exponent>10.0</exponent>
		  <!--Attenuation parameters-->
		  <constant>0.3</constant>
		  <linear>0.0</linear>
		  <quadratic>0.000003</quadratic>
		  <!--Coordinates-->
		  <longitude-deg-prop>/position/longitude-deg</longitude-deg-prop>
		  <latitude-deg-prop>/position/latitude-deg</latitude-deg-prop>
		  <elevation-ft-prop>/position/altitude-ft</elevation-ft-prop>
		  <!--Orientation-->
		  <roll-deg-prop>/orientation/roll-deg</roll-deg-prop>
		  <pitch-deg-prop>/orientation/pitch-deg</pitch-deg-prop>
		  <heading-deg-prop>/orientation/heading-deg</heading-deg-prop>	       
	  </light-source>
	  <light-source>
		  <name>Taxi light</name>	
		  <switch-prop>/controls/switches/taxi-light</switch-prop>
		  <!--Position-->
		  <center-x>-2.0</center-x>
		  <center-y>0.0</center-y>
		  <center-z>-5</center-z>
		  <!--Direction-->
		  <axis-x>-1.0</axis-x>
		  <axis-y>0.0</axis-y>
		  <axis-z>-0.1</axis-z>
		  <!--Frustum parameters-->
		  <cutoff>180.0</cutoff>
		  <exponent>10.0</exponent>
		  <!--Attenuation parameters-->
		  <constant>0.5</constant>
		  <linear>0.0</linear>
		  <quadratic>0.000005</quadratic>
		  <!--Coordinates-->
		  <longitude-deg-prop>/position/longitude-deg</longitude-deg-prop>
		  <latitude-deg-prop>/position/latitude-deg</latitude-deg-prop>
		  <elevation-ft-prop>/position/altitude-ft</elevation-ft-prop>
		  <!--Orientation-->
		  <roll-deg-prop>/orientation/roll-deg</roll-deg-prop>
		  <pitch-deg-prop>/orientation/pitch-deg</pitch-deg-prop>
		  <heading-deg-prop>/orientation/heading-deg</heading-deg-prop>	       
	  </light-source>
  </light>
  
 <!--Exhaust model-->
 <submodels>
	 <serviceable>true</serviceable>
	 <path>Aircraft/an2/submodels.xml</path>
 </submodels>

</sim>
<consumables>
	 <fuel>
		 <tank n="0">
			 <level-gal_us>0</level-gal_us>
		 </tank>
		 <tank n="1">
			 <level-gal_us>160</level-gal_us>
		 </tank>
		 <tank n="2">
			 <level-gal_us>160</level-gal_us>
		 </tank>

	 </fuel>
 </consumables>
 <controls>
	 <engines>
		 <engine>
			 <propeller-pitch>0.1</propeller-pitch>
		 </engine>
	 </engines>
 </controls>
 <an2>
	 <instrumentation>
		 <fuel_select>
			 <position> 0 </position>
		 </fuel_select>
		 <gik>
			 <offset>150</offset>
		 </gik>
		 <va-3>
			 <volts>0</volts>
		 </va-3>
	 </instrumentation>
	 <controls>
		 <door-pos-norm>0</door-pos-norm>
		<switches>
			<adf-selector>1</adf-selector>>
			<fuel_selector>0</fuel_selector>
			<aileron-trim>0</aileron-trim>
			<elevator-trim>0</elevator-trim>
			<rudder-trim>0</rudder-trim>
			<air>0</air>
			<oil>0</oil>
	 	</switches>
	 </controls>
	 <systems>
		 <dampers>
			 <oil-damper>0</oil-damper>
			 <air-damper>0</air-damper>
		 </dampers>
	 </systems>
	 <livreas>
		 <selector>4</selector>
		 <fuselage type="string">afl90_fuse_1_t.rgb</fuselage>
		 <wings type="string">afl90_wings_1_t.rgb</wings>
	 </livreas>
	 <faults>
		 <electrical>
			 <po-500>0</po-500>
		 </electrical>
	 </faults>
	<submodels>
		<exhaust>false</exhaust>
 	</submodels>
 </an2>
 <input>
    <keyboard>
		 <!--Unbind spacebar & print help about starter procedure-->
	 <key n="32">
			 <name>spacebar</name>
			 <desc>Show help about starter</desc>
			 <binding n="0">
				 <command>nasal</command>
				 <script>an2.starter_help()</script>
			 </binding>
	 </key>

	<key n="68">
	 	<name>D</name>
		<desc>Toggle door</desc>
		<binding n="0">
			 <command>nasal</command>
			 <script>an2.toggle_door()</script>
		</binding>
	</key>
	<key n="121">
		<name>y</name>
		<desc>Change livreas</desc>
		<binding n="0">
			<command>nasal</command>
			<script>an2.change_livreas()</script>
		</binding>
	</key>
	<key n="100">
		<name>d</name>
		<desc>aileron trim right</desc>
		<binding n="0">
			<command>nasal</command>
			<script>controls.aileronTrim(1)</script>
		</binding>
	</key>
	<key n="97">
		<name>a</name>
		<desc>aileron trim left</desc>
		<binding n="0">
			<command>nasal</command>
			<script>controls.aileronTrim(-1)</script>
		</binding>
	</key>
   </keyboard>		
</input>

<!-- Nasal files/scripts -->
<nasal>
	<electrical>
		<file>Aircraft/an2/Systems/electrical.nas</file>
	</electrical>
	
	<fuel>
		<file>Aircraft/an2/Systems/fuel.nas</file>
	</fuel>

	<an2>
		<file>Aircraft/an2/Systems/an2.nas</file>
	</an2>
</nasal>


</PropertyList>
