<PropertyList>

 <sim>
	 <description>Legendary Russian AN-2</description>
	 <author>Yurik V. Nikiforoff aka Yurik_nsk - port to FlightGear</author>
         <author>Anton Nikolaev aka Xomer - original model for MSFS</author>
	 <status>early-production</status>
<help>
<title>An-2</title>
<line>________________________Procedures_________________________</line>
<line>Preferred Takeoff: nominal, manifold pressure 900 mmHg, rotate at 110 km/h </line>
<line>Extremal takeoff: flaps to 20', full throttle up to 5 min</line>
<line>Climbout: no flaps, pressure 900 mmHg, 140 km/h</line>
<line>Cruise: pressure 615-745 mmHg, speed up to 225 km/h</line>
<line>Landing: 30' flaps, 90 km/h. </line>

</help>

<model>
<path>Aircraft/an2/Model/an2-model.xml</path>
</model>

  <flight-model>jsb</flight-model>
  <aero>an2</aero>
  <startup>
    <splash-texture>Aircraft/an2/splash.rgb</splash-texture>
  </startup>



  <!-- Use a 2D instrument panel -->
  <panel>
   <path>Aircraft/an2/Panels/ruspanel.xml</path>
   <visibility archive="y">false</visibility>
  </panel>
  
  <flaps>
	  <setting>0.0</setting>
	  <setting>0.25</setting>
	  <setting>0.5</setting>
	  <setting>0.75</setting>
	  <setting>1.0</setting>
  </flaps>
  
  
  <virtual-cockpit archive="y">true</virtual-cockpit>
  
  <allow-toggle-cockpit archive="y">true</allow-toggle-cockpit>
  
  <view>
    <!-- set true if you want 3d cockpit -->
   <internal archive="y">true</internal>
   <config>
  <x-offset-m archive="y">-0.55</x-offset-m>
<!--<x-offset-m archive="y">0.0</x-offset-m>-->
     <y-offset-m archive="y">0.5</y-offset-m>
     <z-offset-m archive="y">-1.6</z-offset-m>
   </config>
  </view>
  <sound>
   <path archive="y">Aircraft/an2/Systems/an2-sound.xml</path>
  </sound>
 <!--Light source subsystem-->
  <!-- experimental, work only for patched sim -->
  <light>
	  <light-source>
		  <name>Landing</name>	
		  <switch-prop>/controls/switches/landing-light</switch-prop>
		  <!--Position-->
		  <center-x>-3.0</center-x>
		  <center-y>0.0</center-y>
		  <center-z>-1.0</center-z>
		  <!--Direction-->
		  <axis-x>-1.0</axis-x>
		  <axis-y>0.0</axis-y>
		  <axis-z>-0.1</axis-z>
		  <!--Frustum parameters-->
		  <cutoff>20.0</cutoff>
		  <exponent>10.0</exponent>
		  <!--Attenuation parameters-->
		  <constant>0.3</constant>
		  <linear>0.0</linear>
		  <quadratic>0.000003</quadratic>
		  <!--Coordinates-->
		  <longitude-deg-prop>/position/longitude-deg</longitude-deg-prop>
		  <latitude-deg-prop>/position/latitude-deg</latitude-deg-prop>
		  <elevation-ft-prop>/position/altitude-ft</elevation-ft-prop>
		  <!--Orientation-->
		  <roll-deg-prop>/orientation/roll-deg</roll-deg-prop>
		  <pitch-deg-prop>/orientation/pitch-deg</pitch-deg-prop>
		  <heading-deg-prop>/orientation/heading-deg</heading-deg-prop>	       
	  </light-source>
	  <light-source>
		  <name>Taxi light</name>	
		  <switch-prop>/controls/switches/taxi-light</switch-prop>
		  <!--Position-->
		  <center-x>-2.0</center-x>
		  <center-y>0.0</center-y>
		  <center-z>-5</center-z>
		  <!--Direction-->
		  <axis-x>-1.0</axis-x>
		  <axis-y>0.0</axis-y>
		  <axis-z>-0.1</axis-z>
		  <!--Frustum parameters-->
		  <cutoff>180.0</cutoff>
		  <exponent>10.0</exponent>
		  <!--Attenuation parameters-->
		  <constant>0.5</constant>
		  <linear>0.0</linear>
		  <quadratic>0.000005</quadratic>
		  <!--Coordinates-->
		  <longitude-deg-prop>/position/longitude-deg</longitude-deg-prop>
		  <latitude-deg-prop>/position/latitude-deg</latitude-deg-prop>
		  <elevation-ft-prop>/position/altitude-ft</elevation-ft-prop>
		  <!--Orientation-->
		  <roll-deg-prop>/orientation/roll-deg</roll-deg-prop>
		  <pitch-deg-prop>/orientation/pitch-deg</pitch-deg-prop>
		  <heading-deg-prop>/orientation/heading-deg</heading-deg-prop>	       
	  </light-source>
  </light>
  
 <!--Exhaust model-->
 <submodels>
	 <serviceable>true</serviceable>
	 <path>Aircraft/an2/Systems/submodels.xml</path>
 </submodels>
 <tutorials>
   <tutorial include="Tutorials/startup_tutorial.xml"/>
 </tutorials>
</sim>
<consumables>
	 <fuel>
		 <tank n="0">
			 <level-gal_us>0</level-gal_us>
		 </tank>
		 <tank n="1">
			 <level-gal_us>150</level-gal_us>
		 </tank>
		 <tank n="2">
			 <level-gal_us>150</level-gal_us>
		 </tank>

	 </fuel>
 </consumables>
 <controls>
	 <engines>
		 <engine>
			 <propeller-pitch>0.0</propeller-pitch>
		 </engine>
	 </engines>
 </controls>
 <an2>
	 <instrumentation>
		 <fuel-select>
			 <position archive="y"> 0 </position>
		 </fuel-select>
		 <gik >
			 <offset>150</offset>
		 </gik>
		 <va-3>
			 <volts>0</volts>
		 </va-3>
		 <gpk-48>
			 <caged-flag archive="y">1</caged-flag>
			 <true-heading-deg>0.0</true-heading-deg>
			 <indicated-heading-deg>0.0</indicated-heading-deg>
		 </gpk-48>
                 <starter>
                   <spin type="double">0.0</spin>
                 </starter>
	 </instrumentation>
	 <controls>
		 <door-pos-norm>0</door-pos-norm>
		<switches>
                  	<yadro_switch archive="y" type="bool">0</yadro_switch>
                        <light_1_switch archive="y" type="bool">0</light_1_switch>
                        <light_2_switch archive="y" type="bool">0</light_2_switch>
			<adf-selector  archive="y">1</adf-selector>>
			<fuel_selector  archive="y">0</fuel_selector>
			<aileron-trim archive="y">0</aileron-trim>
			<elevator-trim  archive="y">0</elevator-trim>
			<rudder-trim  archive="y">0</rudder-trim>
			<air  archive="y">0</air>
			<oil  archive="y">0</oil>
                        <mixture archive="y" type="double">1.1</mixture>
                        <prop_handle archive="y" type="double">1.0</prop_handle>
	 	</switches>
                <light>
                  <!--UV light intensivity-->
                  <uv-bright archive="y" type="double">0.8</uv-bright>
                  <!--External instrument light-->
                  <ext-red archive="y" type="double">0.0</ext-red>
                  <ext-green archive="y" type="double">0.0</ext-green>
                  <ext-blue archive="y" type="double">0.0</ext-blue>

                  <ext-red-standby archive="y" type="double">0.1</ext-red-standby>
                  <ext-green-standby archive="y" type="double">0.1</ext-green-standby>
                  <ext-blue-standby archive="y" type="double">0.6</ext-blue-standby>

                  <!--Internal instrument light-->
                  <int-red archive="y" type="double">0.0</int-red>
                  <int-green archive="y" type="double">0.0</int-green>
                  <int-blue archive="y" type="double">0.0</int-blue>
                  
                  <int-red-standby archive="y" type="double">0.7</int-red-standby>
                  <int-green-standby archive="y" type="double">0.6</int-green-standby>
                  <int-blue-standby archive="y" type="double">0.5</int-blue-standby>

                </light>
	 </controls>
	 <systems>
		 <dampers>
			 <oil-damper  archive="y">0</oil-damper>
			 <air-damper  archive="y">0</air-damper>
		 </dampers>
                 <slats>
                   <position  archive="y">0.0</position>
                 </slats>

	 </systems>
	 <livreas>
		 <selector>4</selector>
		 <fuselage type="string"  archive="y">afl90_fuse_1_t.rgb</fuselage>
		 <wings type="string"  archive="y">afl90_wings_1_t.rgb</wings>
	 </livreas>
	 <faults>
		 <electrical>
			 <po-500  archive="y">0</po-500>
		 </electrical>
	 </faults>
	<submodels>
		<exhaust  archive="y">false</exhaust>
 	</submodels>
        <textures>
          	<low-res archive="y" type="bool">true</low-res>
        </textures>
 </an2>
 <input>
    <keyboard>
		 <!--Unbind spacebar & print help about starter procedure-->
	 <key n="32">
			 <name>spacebar</name>
			 <desc>Show help about starter</desc>
			 <binding n="0">
				 <command>nasal</command>
				 <script>an2.starter_help()</script>
			 </binding>
	 </key>

	<key n="68">
	 	<name>D</name>
		<desc>Toggle door</desc>
		<binding n="0">
			 <command>nasal</command>
			 <script>an2.toggle_door()</script>
		</binding>
	</key>
	<key n="121">
		<name>y</name>
		<desc>Change livreas</desc>
		<binding n="0">
			<command>nasal</command>
			<script>an2.change_livreas()</script>
		</binding>
	</key>
	<key n="100">
		<name>d</name>
		<desc>aileron trim right</desc>
		<binding n="0">
			<command>nasal</command>
			<script>controls.aileronTrim(1)</script>
		</binding>
	</key>
	<key n="97">
		<name>a</name>
		<desc>aileron trim left</desc>
		<binding n="0">
			<command>nasal</command>
			<script>controls.aileronTrim(-1)</script>
		</binding>
	</key>
        <key n="103">
          <name>g</name>
          <desc>toggle cabin view</desc>
          <binding n="0">
            <command>nasal</command>
            <script>an2.view_toggle()</script>
          </binding>
        </key>
        <key n="71">
          <name>G</name>
          <desc>reset cabin view</desc>
          <binding n="0">
            <command>property-assign</command>
            <property>/sim/current-view/x-offset-m</property>
            <value>-0.55</value>
          </binding>
        </key>
   </keyboard>		
</input>

<!-- Nasal files/scripts -->
<nasal>
	<electrical>
		<file>Aircraft/an2/Systems/electrical.nas</file>
	</electrical>
	
	<fuel>
		<file>Aircraft/an2/Systems/fuel.nas</file>
	</fuel>
       <controls>
          <file>Aircraft/an2/Systems/controls.nas</file>
        </controls>

	<an2>
		<file>Aircraft/an2/Systems/an2.nas</file>
	</an2>
</nasal>

<!--Start with caged attitude indicator-->
<instrumentation>
  <attitude-indicator>
    <caged-flag>1</caged-flag>
  </attitude-indicator>
</instrumentation>

</PropertyList>
